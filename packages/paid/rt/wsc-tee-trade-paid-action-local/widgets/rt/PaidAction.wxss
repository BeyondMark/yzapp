.action-block {
  padding: 24px 20px 16px;
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.action-block.bg-transparent {
  background: transparent;
}
.action-block--normal {
  text-align: center;
}
.action-block__btn-default,
.action-block__btn-primary {
  white-space: nowrap;
  font-size: 14px;
  position: relative;
}
.action-block__btn-primary {
  display: flex;
  justify-content: center;
  width: 100%;
  margin: 0 auto 18px;
  overflow: hidden;
}
.action-block__btn-default-next:before {
  position: absolute;
  box-sizing: border-box;
  content: "";
  pointer-events: none;
  width: 1px;
  height: 18px;
  z-index: 1;
  left: 0;
  top: 50%;
  border-left: 1px solid #dcdee0;
  transform: scaleX(0.5) translateY(-50%);
  transform-origin: left top;
}
.action-block__btn-split {
  display: inline-block;
  width: 1px;
  height: 16px;
  background: #dcdee0;
  vertical-align: middle;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -8px;
}
.action-block__btn {
  background: transparent !important;
  height: 36px !important;
  line-height: 36px !important;
  width: 100px;
}
.action-block__btn.block {
  width: 118px;
}
