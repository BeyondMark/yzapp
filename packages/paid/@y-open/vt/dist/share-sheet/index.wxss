.t-share-sheet__header {
  padding: 12px 16px 4px;
  text-align: center;
}
.t-share-sheet__title {
  margin-top: 8px;
  color: #323233;
  font-weight: 400;
  font-size: 14px;
  line-height: 20px;
}
.t-share-sheet__title:empty,
.t-share-sheet__title:not(:empty) + .t-share-sheet__title {
  display: none;
}
.t-share-sheet__description {
  display: block;
  margin-top: 8px;
  color: #969799;
  font-size: 12px;
  line-height: 16px;
}
.t-share-sheet__description:empty,
.t-share-sheet__description:not(:empty) + .t-share-sheet__description {
  display: none;
}
.bf595 {
  display: block;
  width: 100%;
  padding: 0;
  font-size: 16px;
  line-height: 48px;
  text-align: center;
  background: #fff;
  border: none;
  cursor: pointer;
  box-sizing: initial;
  height: auto;
}
.bf595:before {
  display: block;
  height: 8px;
  background-color: #f7f8fa;
  content: " ";
}
.bf595:after {
  display: none;
}
.bf595:active {
  background-color: #f2f3f5;
}
