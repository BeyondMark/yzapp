.tee-image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.guarantee-declare {
  height: 80vh;
}
.guarantee-declare .text-inline {
  display: inline;
}
.guarantee-declare__title {
  font-size: 16px;
  text-align: center;
  padding-top: 15px;
  padding-bottom: 20px;
  color: #111;
  font-weight: 700;
}
.guarantee-declare__content {
  padding: 0 15px 15px;
}
.guarantee-declare__sub-title {
  font-size: 14px;
  color: #111;
  padding: 20px 0 10px;
}
.guarantee-declare__sub-category {
  font-size: 14px;
  color: #111;
  padding: 10px 0 6px;
}
.guarantee-declare__text {
  font-size: 12px;
  color: #666;
  line-height: 1.8;
}
.guarantee-declare__text img {
  display: inline-block;
}
.guarantee-declare__text .bold {
  font-weight: 700;
}
.guarantee-declare__text.textAlignRight {
  text-align: right;
}
