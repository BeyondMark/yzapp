.t-hairline--bottom {
  position: relative;
}
.t-hairline--bottom:after {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  top: -50%;
  bottom: -50%;
  border: 0 solid #ebedf0;
  border-bottom-width: 1px;
  transform: scaleY(0.5);
  left: 12px;
  right: 12px;
}
