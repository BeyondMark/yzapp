.mo-container {
  max-height: 80vh;
  min-height: 50vh;
  display: flex;
  flex-direction: column;
}
.mo-container .header-wrap {
  position: relative;
  flex: none;
  text-align: center;
  padding: 10px 0 6px;
}
.mo-container .mo-title {
  margin-bottom: 8px;
  font-size: 16px;
  line-height: 22px;
  font-family: PingFangSC-Medium;
}
.mo-container .mo-title-icon {
  position: relative;
  top: 2px;
}
.mo-container .mo-tips {
  font-size: 12px;
  line-height: 18px;
  color: #969799;
}
.mo-container .combo-list-wrap {
  flex: 1;
  overflow-y: auto;
}
.mo-container .combo-list-wrap .mo-combo-list {
  height: 100%;
  overflow: auto;
  background: #f7f8fa;
  padding: 0 12px;
}
.mo-container .button_wrap {
  background-color: #fff;
  position: relative;
  z-index: 1;
  flex: none;
  padding: 8px 16px;
}
.mo-container .mo-cart-btn {
  width: 100%;
  height: 36px;
  margin: 0 auto;
  font-size: 14px;
  line-height: 36px;
  text-align: center;
  border-radius: 18px;
  color: #fff;
  background: var(--main-bg);
  border: none;
}
