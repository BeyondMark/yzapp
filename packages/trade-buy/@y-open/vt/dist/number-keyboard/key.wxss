  background-color: #fff;
  border-radius: 8px;
}
.be30a--large {
  position: absolute;
  top: 0;
  right: 6px;
  bottom: 6px;
  left: 0;
  height: auto;
}
.be30a--blue,
.be30a--delete {
  font-size: 16px;
}
.be30a:active {
  background-color: #ebedf0;
}
.be30a--blue {
  color: #fff;
  background-color: #1989fa;
}
