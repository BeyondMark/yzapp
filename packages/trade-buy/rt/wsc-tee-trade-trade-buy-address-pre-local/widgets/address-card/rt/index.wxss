.address-card {
  position: relative;
  overflow: hidden;
  background-color: #fff;
}
.address-card__tag {
  height: 14px;
  box-sizing: border-box;
  margin-left: 8px;
  min-width: 32px;
  justify-content: center;
}
.address-card__tag:after {
  border-radius: var(--theme-radius-tag, 8px) !important;
}
.address-card__tag-root {
  display: flex;
  align-items: center;
  flex: 0 0 auto;
}
.address__sub {
  font-size: 13px;
  color: #323233;
  display: flex;
  align-items: center;
}
.address__get-xsh {
  color: #155bd4;
}
.address__title {
  font-size: 17px;
  color: #323233;
  font-weight: var(--theme-common-field-font-weight, bold);
  margin: 8px 0;
}
.address__tip {
  background: #fffbe8;
  border-radius: 14px;
  font-size: 12px;
  color: #ed6a0c;
  line-height: 16px;
  padding: 6px 8px;
  margin: 0 var(--theme-page-card-padding-right, 12px)
    var(--theme-page-card-padding-bottom, 12px)
    var(--theme-page-card-padding-left, 12px);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.address:after {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  bottom: 0;
  border-bottom: 1px solid #ebedf0;
}
.address:after,
.t-hairline--bottom:after {
  right: 12px;
  left: 12px;
  transform: scaleY(0.5);
}
