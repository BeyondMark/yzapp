.tee-image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.guarantee-footer {
  position: relative;
  margin-top: 10px;
}
.guarantee-footer__icon {
  display: block;
  margin: 0 auto;
  width: 131px;
  height: 14px;
}
.guarantee-footer__icon.youzan {
  width: 148px;
}
.guarantee-footer__services {
  text-align: center;
  margin-top: 8px;
}
.guarantee-footer__service-item {
  margin: 0 6px;
  display: inline-block;
  line-height: 12px;
  font-size: 10px;
  color: #979799;
}
.guarantee-footer__service-item .icon {
  width: 12px;
  height: 12px;
  margin-right: 2px;
  vertical-align: middle;
  display: inline-block;
  margin-bottom: 2px;
}
