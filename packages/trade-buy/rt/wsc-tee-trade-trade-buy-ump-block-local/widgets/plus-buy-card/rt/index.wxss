.t-text {
  text-decoration: inherit;
}
.t-text,
.tee-image {
  display: inline-block;
}
.tee-image {
  width: 100%;
  height: 100%;
}
.plus-buy-card {
  position: relative;
  display: flex;
  height: 100%;
}
.plus-buy-card .c {
  width: 120px;
  border: 1px solid #ededed;
  overflow: hidden;
  border-radius: 10px;
}
.plus-buy-card .c__thumb {
  flex: none;
  width: 120px;
  height: 120px;
}
.plus-buy-card .c__content {
  background-color: #fff;
  padding: 5px 6px;
  font-size: 14px;
}
.plus-buy-card .c__title {
  margin-bottom: 8px;
  overflow: hidden;
  color: #323233;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.plus-buy-card .c__price__box {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin-bottom: 5px;
}
.plus-buy-card .c__price__box .price-left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.plus-buy-card .c__price__box .price-pay {
  font-weight: 500;
  margin-right: 2px;
  font-family: Avenir;
  color: var(--general, #ae2121);
}
.plus-buy-card .c__price__box .price-origin-pay {
  font-size: 13px;
  text-decoration: line-through;
  color: #969799;
  transform: scale(0.8);
}
.plus-buy-card .c__price__box .price-right {
  width: 28px;
  flex: none;
  justify-content: flex-end;
}
.plus-buy-card .c__price__box .price-right .checkbox {
  justify-content: flex-end;
}
.plus-buy-card-one {
  width: 100%;
}
.plus-buy-card-one .c {
  width: 100%;
  display: flex;
  border: none;
}
.plus-buy-card-one .c__thumb {
  margin-right: 10px;
  border-radius: 8px;
  width: 96px;
  height: 96px;
}
.plus-buy-card-one .c__title {
  margin-bottom: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  white-space: normal;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.plus-buy-card-one .c__desc {
  display: inline-flex;
  align-self: flex-start;
  align-items: center;
  padding: 4px 0;
  font-size: 12px;
  color: #969799;
  align-content: center;
}
.plus-buy-card-one .c__desc__text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.plus-buy-card-one .c__content {
  width: 100%;
  display: flex;
  padding: 0;
  flex-direction: column;
  justify-content: space-between;
}
.plus-buy-card-one .c__content .c__price__box {
  width: 100%;
  align-items: flex-start;
  font-size: 16px;
}
.plus-buy-card-one .c__content .c__price__box .price-right {
  flex: 1;
}
