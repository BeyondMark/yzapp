.edu-widgets--cube {
  display: flex;
  flex-flow: row wrap;
  background: #fff;
  border-radius: var(--theme-radius-card, 0);
}
.widget {
  position: relative;
  width: 25%;
  height: 66px;
  padding-top: 12px;
  padding-bottom: 18px;
  color: #111;
  font-size: 12px;
  text-align: center;
}
.widget__icon {
  display: block;
  width: 22px;
  height: 22px;
  margin: 12px auto 8px;
}
.widget__badge {
  position: absolute;
}
.widget__badge--red-point {
  top: 10px;
  right: 15px;
  width: 8px;
  height: 8px;
  background-color: #fd0600;
  border-radius: 50%;
}
.widget__badge--number {
  top: 10px;
  right: 15px;
  height: 18px;
  background-color: #fd0600;
  border-radius: 999px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 12px;
  padding: 0 5px;
  box-sizing: border-box;
  min-width: 18px;
}
.widget__badge--reward {
  top: 5px;
  right: 10px;
  width: 20px;
  height: 14px;
  line-height: 14px;
  background-color: #e54848;
  border-radius: 5px 7px 7px 0;
}
.widget__badge--reward:after {
  display: inline-block;
  color: #fff;
  font-size: 20px;
  transform: scale(0.5);
  content: "å¥–";
}
.widget__title {
  color: #111;
  font-size: 13px;
}
