.member-center__stats {
  display: flex;
  flex-direction: row;
  height: 65px;
  align-items: center;
}
.member-center__single,
.member-center__stats {
  margin: 0 8px 8px;
  background: #fff;
  border-radius: var(--theme-radius-card, 0);
}
.member-center__single .icon {
  width: 20px;
  height: 20px;
  line-height: 24px;
  margin: 2px 10px 2px 0;
}
.member-center__cell--title {
  display: flex;
  justify-content: flex-start;
}
.member-center__custom-van-cell {
  padding: 16px 8px !important;
  background: #fff !important;
  border-radius: var(--theme-radius-card, 0);
}
.member-center__stats-item {
  flex: 1;
  text-align: center;
  line-height: 22px;
  padding: 8px 0;
}
.member-center__stats-item__value {
  position: relative;
  display: inline-block;
  font-size: 16px;
  color: #111;
  font-weight: 600;
}
.member-center__stats-item__name {
  margin-top: 4px;
  font-size: 12px;
  color: #999;
}
.member-center__stats-item__dot {
  display: inline-block;
  position: absolute;
  top: 0;
  right: -8px;
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background-color: #f44;
}
.member-center__stats-icon__gold {
  font-size: 18px !important;
}
