.benefit-item .van-cell {
  padding: 12px;
}
.benefit-item .van-cell span {
  font-size: 14px;
  color: #333;
}
.benefit-item .van-cell .van-cell__label {
  font-size: 12px;
  color: #7d7e80;
}
.benefit-item .benefit-item__title {
  border-bottom: 1px dashed #c8c9cc;
}
.benefit-item .benefit-item__title .benefit_name {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}
.benefit-item .benefit-item__title .benefit_detail {
  font-size: 12px;
  color: #7d7e80;
  word-break: break-word;
  display: flex;
}
.benefit-item .benefit-item__icon {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  margin-right: 16px;
}
.benefit-item .benefit-item__icon > image {
  width: 48px;
  height: 48px;
}
.use-detail {
  padding: 12px 12px 0;
  font-size: 14px;
  height: 100vh;
  background-color: #f8f8f8;
}
.use-detail .panel-title {
  padding: 16px;
  font-weight: 700;
}
.use-detail .van-cell:not(:last-child):after {
  left: 12px;
  right: 12px;
  border-color: #d8d8d8;
}
.use-detail .first-name {
  color: #323233;
  margin-bottom: 14px;
}
.use-detail .info_wrapper {
  padding: 10px 16px 16px;
}
.use-detail .info_wrapper .use-detail_info {
  color: #323233;
}
.use-detail .info_wrapper .use-detail_info-label {
  display: inline-block;
  width: 80px;
  margin-right: 20px;
  color: #7d7e80;
}
.use-detail .shop-info_wrapper {
  padding: 16px;
}
.use-detail .shop-info_wrapper .shop-info {
  color: #7d7e80;
  font-size: 13px;
  word-break: break-word;
  display: flex;
}
.use-detail .shop-info_wrapper .shop-info .shop-address {
  padding-right: 5px;
  flex-grow: 1;
}
.use-detail .shop-info_wrapper .shop-info .shop-service_phone {
  float: right;
  padding-left: 16px;
  border-left: 1px solid #dcdee0;
  font-size: 20px;
}
.mar_bot_10 {
  margin-bottom: 10px;
}
