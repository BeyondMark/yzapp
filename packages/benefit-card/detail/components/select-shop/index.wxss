.select-shop-popup {
  padding: 32rpx 32rpx 14rpx 32rpx;
  border-radius: 32rpx 32rpx 0 0;
  box-sizing: border-box;
}
.select-shop-popup-header .title {
  font-size: 18px;
  font-weight: 700;
  text-align: left;
}
.select-shop-popup-header .search-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 9px;
}
.select-shop-popup-header .search-input-container {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
  padding: 0 7px;
  background-color: #f0f0f0;
  font-size: 14px;
  box-sizing: border-box;
  border-radius: 16px;
  overflow: hidden;
}
.select-shop-popup-header .cancel-btn {
  width: 80rpx;
  margin-left: 16rpx;
}
.select-shop-popup-header .search-icon {
  width: 18px;
  height: 18px;
  font-size: 18px;
}
.select-shop-popup-header .search-input {
  flex: 1;
  height: 32px;
  line-height: 32px;
  margin-left: 10px;
  border: none;
  outline: none;
  background-color: #f0f0f0;
}
.shop-list {
  height: 270px;
  overflow-y: scroll;
}
.current-shop-tag {
  color: #ee0a24;
  background-color: rgba(238, 10, 36, 0.1);
  border-radius: 2px;
  height: 16px;
  line-height: 16px;
  font-size: 12px;
  margin-left: 6px;
  width: 56px;
  display: inline-block;
  text-align: center;
  font-weight: 400;
}
.theme-view-wrap {
  margin-top: 16px;
  border-radius: 18px;
  overflow: hidden;
}
.theme-view-wrap .confirm-btn {
  height: 36px;
  line-height: 36px;
  color: #fff;
  font-size: 14px;
  text-align: center;
  border-style: solid;
  border-width: 1px;
  border-radius: 10em;
  color: inherit;
  border-color: inherit;
  background: transparent;
}
.shop-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 11px 0;
  font-size: 14px;
  color: #969799;
}
.selected-item {
  font-weight: 700;
  color: #000;
}
.selected-item .selected-icon {
  display: block;
}
.selected-icon {
  line-height: 44px;
  font-size: 22px;
  float: right;
  display: none;
}
.shop-name {
  line-height: 1.4;
}
@import "/packages/benefit-card/style/theme-view.wxss";
