.e4ca1 {
  position: relative;
  padding: 8px 0;
  border-radius: var(--theme-radius-card, 2px);
}
.e4ca1:after {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border: 0 solid #ebedf0;
  transform: scale(0.5);
  border-radius: 2px;
  border-width: 1px;
}
.bbcc3,
.c36107 {
  font-size: 12px;
  text-align: center;
  line-height: 17px;
}
.bbcc3 {
  color: #323233;
}
.c36107 {
  color: var(--general);
}
.cec55:after {
  border-color: var(--general);
}
