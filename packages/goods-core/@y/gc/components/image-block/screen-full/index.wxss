@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes fadeOut {
  0% {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.fade-in {
  opacity: 0;
  animation: fadeIn 50ms ease-out 0s 1 forwards;
}
.fade-out {
  animation: fadeOut 50ms ease-out 0s 1 forwards;
}
