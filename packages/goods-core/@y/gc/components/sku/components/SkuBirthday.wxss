.c82028 {
  padding: 0 16px var(--theme-goods-sku-row-padding-bottom, 0);
  position: relative;
}
.c82028:after {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  top: -50%;
  right: calc(-50% + 32px);
  bottom: -50%;
  left: calc(-50% + 32px);
  border: 0 solid #ebedf0;
  transform: scale(0.5);
  border-bottom-width: 1px;
}
.c2e5a4 {
  padding: var(--theme-goods-sku-normal-margin, 12px) 16px;
  position: relative;
  display: flex;
}
.c2e5a4:before {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  top: -50%;
  right: calc(-50% + 32px);
  bottom: -50%;
  left: calc(-50% + 32px);
  border: 0 solid #ebedf0;
  transform: scale(0.5);
