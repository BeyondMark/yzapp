.t-text {
  display: inline-block;
  text-decoration: inherit;
}
.trade-records-block {
  margin-top: var(--theme-page-ext-margin-top, 8px);
  background-color: #fff;
}
.trade-records-block:before {
  content: "";
  display: block;
  margin: 0 16px;
  border-top: var(--theme-page-ext-border-top, 0);
}
.trade-records-block .block-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: #323233;
  line-height: 20px;
  padding: var(--theme-page-title-padding, 12px) 16px
    var(--theme-page-title-padding, 6px);
}
.trade-records-block .block-header-title {
  font-weight: var(--theme-common-field-font-weight, 500);
}
.trade-records-block .block-header-more {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #969799;
  text-align: right;
  line-height: 16px;
}
.trade-records-block .block-header-more__icon {
  vertical-align: middle;
  margin-right: -3px;
}
.trade-records-block .block-body {
  padding-bottom: 10px;
}
.trade-records-block .block-body .trade-records-swipe {
  height: 100%;
}
.trade-records-block .block-body .trade-records-swipe .t-swipe__track {
  transition-property: transform;
}
