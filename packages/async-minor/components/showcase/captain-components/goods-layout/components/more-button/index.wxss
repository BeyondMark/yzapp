.c-goods-layout__more {
  line-height: 44px;
  margin-bottom: 10px;
}
.c-goods-layout__more--1,
.c-goods-layout__more--3 {
  margin-left: 10px;
  margin-right: 10px;
}
.c-goods-layout__more--2 .van-cell__value--alone {
  text-align: right;
  color: #969799;
}
.c-goods-layout__more--1 .van-button {
  color: #323233;
}
.c-goods-layout__more--3 .van-button {
  background-color: transparent;
}
.c-goods-layout__more--5,
.c-goods-layout__more--6 {
  height: 100%;
  box-sizing: border-box;
  margin: 0;
}
.more-link--5,
.more-link--6 {
  color: #969799;
  font-size: 12px;
  text-align: center;
  height: 100%;
  line-height: 1;
  position: relative;
}
.more-link--5 .more-text,
.more-link--6 .more-text {
  width: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.more-link--5 {
  width: 45px;
}
.more-link--5 .more-text {
  writing-mode: vertical-lr;
  letter-spacing: 3px;
}
.more-link--5 .arrow-left-icon {
  position: relative;
  top: -8px;
  background-image: url(https://img01.yzcdn.cn/weapp/wsc/GNbQatdr.png);
  background-size: 11px 8px;
  width: 11px;
  height: 8px;
  margin: 50% 10px 0 0;
}
.more-link--6 {
  border-radius: 4px;
  background: rgba(50, 50, 51, 0.05);
}
.more-link--6 .arrow-right-icon {
  width: 8px;
  height: 8px;
  background-image: url(https://img01.yzcdn.cn/weapp/wsc/Y48SegMX.png);
  background-size: 8px 8px;
  display: inline-block;
}
