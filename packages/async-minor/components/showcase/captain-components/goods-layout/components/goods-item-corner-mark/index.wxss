.corner-mark {
  position: absolute;
  left: 0;
  top: 0;
  color: #f44;
  line-height: 0;
}
.corner-mark--custom {
  height: 36px;
  width: 36px;
}
.corner-back {
  position: absolute;
  background-color: #fff;
}
.corner-mark--0 {
  top: 1px;
  font-size: 38px;
  height: 38px;
  width: 38px;
}
.corner-back--0 {
  width: 36px;
  height: 20px;
  top: 10px;
  left: 0;
  border-radius: 0 10px 10px 0;
}
.corner-mark--1 {
  left: 1px;
  top: 10px;
  font-size: 36px;
  height: 36px;
  width: 36px;
}
.corner-back--1 {
  width: 16px;
  height: 36px;
  border-radius: 1px;
  left: 10px;
  top: 10px;
}
.corner-mark--2 {
  left: 5px;
  top: 0;
  font-size: 36px;
  height: 36px;
  width: 36px;
}
.corner-back--2 {
  width: 19px;
  height: 20px;
  border-radius: 0 4px 4px 0;
  left: 12px;
  top: 2px;
}
.corner-mark--3 {
  left: 5px;
  top: 5px;
  font-size: 40px;
  height: 40px;
  width: 40px;
  color: #ffd211;
}
.corner-back--3 {
  width: 24px;
  height: 16px;
  top: 17px;
  left: 13px;
}
