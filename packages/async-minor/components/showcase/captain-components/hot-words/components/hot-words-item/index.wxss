.hot-words-tags {
  position: relative;
  display: inline-block;
  box-sizing: border-box;
  margin: 4px;
  padding: 0 16px;
  line-height: 36px;
  border-radius: 18px;
  color: #323233;
  background-color: #f7f8fa;
}
.hot-words-tags-inline {
  line-height: 32px !important;
}
.hot-words-tags-hot {
  position: absolute;
  top: -5px;
  right: 0;
  display: inline-block;
  width: 23px;
  height: 12px;
}
.hot-words-tags-light:before {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: currentColor !important;
  border-radius: 18px;
  opacity: 0.1;
  content: "";
}
