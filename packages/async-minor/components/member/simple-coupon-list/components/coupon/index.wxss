.coupon-wrapper {
  width: 100%;
  height: 84px;
  margin-bottom: 12px;
  background: #fff;
  color: #a47339;
  display: flex;
  border-radius: 4px;
}
.coupon-content-box {
  display: flex;
  flex-direction: column;
  padding: 12px;
}
.coupon-value-box {
  position: relative;
  width: 84px;
  padding: 10px;
  justify-content: space-around;
  text-align: center;
  border-right: 1px dashed #e8d6c1;
}
.coupon-value-box:after,
.coupon-value-box:before {
  content: "";
  position: absolute;
  width: 16px;
  height: 8px;
  background-color: #f2f3f5;
  z-index: 100;
}
.coupon-value-box:before {
  top: 0;
  right: -8px;
  border-radius: 0 0 8px 8px;
}
.coupon-value-box:after {
  bottom: 0;
  right: -8px;
  border-radius: 8px 8px 0 0;
}
.coupon-value {
  font-size: 30px;
  font-weight: 600;
}
.coupon-value-text {
  font-size: 18px;
  line-height: 30px;
}
.coupon-threshold,
.coupon-unit {
  font-size: 12px;
  line-height: 16px;
}
.coupon-info-wrapper {
  flex: 1;
  display: flex;
  padding-right: 12px;
}
.coupon-content {
  flex: 1;
  justify-content: space-around;
}
.coupon-name {
  font-size: 14px;
  font-weight: 500;
}
.coupon-count {
  font-weight: 400;
  font-size: 12px;
  color: #a47339;
  opacity: 0.8;
}
.coupon-time {
  font-size: 12px;
  line-height: 16px;
}
.coupon-btn {
  width: 58px;
  height: 20px;
  line-height: 20px;
  padding: 4px 0;
  text-align: center;
  font-size: 14px;
  color: #a47339;
  background-color: #fcf5eb;
  border-radius: 14px;
}
.coupon-btn.van-button--normal {
  padding: 0;
}
.coupon-btn-wrapper {
  display: flex;
  align-items: center;
}
