.multi-goods {
  width: 279px;
  background-color: #f7f8fa;
  margin: 0 auto 24px;
  padding: 8px 0;
  border-radius: var(--theme-radius-card, 4px);
  position: relative;
}
.goods-img {
  width: 264px;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 4px;
}
.goods-image-center {
  justify-content: center;
}
.goods-image {
  width: 56px;
  height: 56px;
  margin-left: 8px;
  margin-bottom: 8px;
  position: relative;
  background-color: #fff;
}
.goods-image,
.goods-image-item {
  border-radius: var(--theme-radius-card, 4px);
}
.goods-image-item {
  width: 100%;
  height: 100%;
}
.goods-desc {
  line-height: 18px;
}
.normal-text,
.unit-text {
  font-size: 12px;
}
.unit-text {
  margin-left: 4px;
}
.price-text-yuan {
  font-size: 18px;
  font-weight: 700;
}
.price-text-fen {
  font-size: 12px;
  font-weight: 700;
}
.arrow {
  width: 32px;
  height: 56px;
  position: absolute;
  top: 8px;
  right: 0;
  background-image: url(https://img01.yzcdn.cn/upload_files/2021/05/28/FnS6KPLihpS_NcSPYgGZd78Oko6k.png);
}
.arrow-icon {
  margin-top: 23px;
  margin-left: 8px;
}
