.follow-popup {
  background-color: transparent !important;
  text-align: center;
}
.follow-popup__content {
  padding: 24px 23px 30px;
  background: #fff;
  border-radius: 8px;
}
.follow-popup__content .title {
  font-size: 16px;
  font-family: PingFangSC-Medium;
}
.follow-popup__content .sub-title {
  margin: 12px 0 28px;
  font-size: 14px;
  color: #646566;
}
.follow-popup__content .follow-button {
  border-radius: 20px;
  width: 270px;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  color: #fff;
  background-image: linear-gradient(90deg, #f72a3e, #f65a1c);
}
.follow-popup__close {
  margin: 20px auto 0;
  color: #fff;
  font-size: 16px;
  padding: 10px;
}
.follow-popup__close,
.follow-popup__close image {
  width: 28px;
  height: 28px;
}
