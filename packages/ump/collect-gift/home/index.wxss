@import "/common/css/helper/index.wxss";
.container {
  padding: 51vw 10px 5px;
  background-size: 100%;
  background-repeat: no-repeat;
}
.container-hidden {
  visibility: hidden;
}
.container_content {
  padding: 15px 20px;
  border-radius: 4px;
  background: #fff;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.1);
}
.title-panel_content {
  font-size: 12px;
  color: #111;
  line-height: 20px;
}
.content_step-1 {
  width: 100%;
}
.content_step-2 {
  margin-top: 40px;
  width: 100%;
  display: flex;
}
.step_gallery-wrapper {
  position: relative;
  display: block;
}
.arrow-left {
  float: left;
  width: 19px;
  height: 13.57px;
  margin-left: 4px;
  background-image: url(https://img01.yzcdn.cn/wsc/20180828/images/collect-gift-arrow-left.png);
  background-position: 50%;
  background-size: contain;
  background-repeat: no-repeat;
}
.step_description {
  margin-left: 49px;
  align-self: center;
}
.description_label {
  font-size: 12px;
  color: #999;
}
.description_content {
  margin-top: 10px;
  margin-bottom: 5px;
  font-size: 12px;
  color: #111;
  line-height: 20px;
}
.content_tip {
  font-size: 12px;
  color: #999;
  margin-top: 10px;
}
.submitted-panel {
  text-align: center;
}
.submitted-panel_logo {
  height: 56px;
  background-position: 50%;
  background-size: contain;
  background-repeat: no-repeat;
}
.submitted-panel_logo-wait-for-audit {
  background-image: url(https://img01.yzcdn.cn/wsc/20180912/images/collect-gift-lorry.png);
}
.submitted-panel_logo-audit-success {
  background-image: url(https://img01.yzcdn.cn/wsc/20180912/images/collect-gift-gift.png);
}
.submitted-panel_status {
  margin-top: 23px;
  margin-bottom: 35px;
  font-size: 14px;
  font-weight: 500;
  color: #111;
}
.submitted-panel_tip {
  margin-top: 20px;
  font-size: 14px;
  color: #666;
}
.submitted-panel_redirect-button_container {
  margin: 40px 0 90px;
}
.submitted-panel_gift-container {
  margin: 50px 0 53px;
  display: flex;
  justify-content: space-around;
}
.gift-container {
  box-sizing: border-box;
  width: 44%;
  padding: 10px;
  text-align: center;
  background: #ffe7ba;
  border-radius: 4px;
}
.gift-container_points_logo {
  background-image: url(https://b.yzcdn.cn/wsc/20180828/images/collect-gift-points-logo.png);
}
.gift-container_coupon_logo,
.gift-container_points_logo {
  width: 30px;
  height: 30px;
  margin-right: auto;
  margin-left: auto;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: 50%;
}
.gift-container_coupon_logo {
  background-image: url(https://b.yzcdn.cn/wsc/20180828/images/collect-gift-crash-logo.png);
}
.gift-container_title {
  margin-top: 10px;
  font-size: 12px;
  opacity: 0.5;
  color: #a25700;
}
.gift-container_detail {
  margin-top: 2px;
  font-size: 14px;
  color: #a25700;
}
.gift-container_button-points {
  font-size: 12px !important;
  background: #fff !important;
  color: #ff9300 !important;
  font-size: 12px;
}
.gift-container_button-coupon,
.gift-container_button-points {
  margin-top: 7px !important;
  height: 24px !important;
  line-height: 24px !important;
  border: none !important;
  border-radius: 20px !important;
}
.gift-container_button-coupon {
  font-size: 12px !important;
  background: #ff9300 !important;
  color: #fff !important;
}
.submit-panel__button_line .submit-panel__button {
  height: 32px;
  font-size: 12px;
  color: #ff9300;
  border: none;
  font-weight: bolder;
  line-height: 32px;
}
.submit-panel__button_line .option-button {
  background: #ff9300;
  color: #fff;
  border-radius: 16px;
}
.submit-panel__button_line .option-button.disabled {
  background: rgba(255, 147, 0, 0.5);
}
.gallery {
  display: block;
  width: 96px;
}
.new-gallery {
  display: block;
  width: 80%;
}
.upload-container {
  text-align: center;
  font-size: 12px;
  height: 160px;
  margin-top: 50px;
}
.upload-container_uploaded-image-class {
  width: 76px;
  max-height: 128px;
  box-sizing: border-box;
  padding: 2px;
  background: #fff;
  box-shadow: 0 2px 6px 0 rgba(70, 77, 86, 0.16);
  border-radius: 4px;
}
.align-center {
  margin-left: auto;
  margin-right: auto;
}
.upload-container_reloaded-tip {
  display: inline-block;
  margin-top: 7px;
  color: #38f;
}
.upload-container_un-reloaded-tip {
  display: inline-block;
  margin-top: 15px;
  color: #999;
}
.container_submit-button {
  position: fixed !important;
  left: 0;
  bottom: 0;
  z-index: 10;
  border-radius: 0 !important;
}
.desc__gallery {
  display: block;
}
.desc__content {
  margin-top: 10px;
  margin-bottom: 5px;
  font-size: 12px;
  color: #111;
  line-height: 20px;
}
.content-step-1,
.content-step-2 {
  width: 100%;
  display: block;
}
.content-step-2 {
  margin-top: 20px;
}
.desc__img {
  width: 88.8%;
  margin-left: 5.6%;
}
.desc__icon-1 {
  display: inline-block;
  font-size: 20px;
  line-height: 12px;
  position: relative;
  top: 6px;
}
.desc__img-middle {
  height: 75px;
  display: block;
}
.desc__img-step2 {
  height: 90px;
  background: url(https://img01.yzcdn.cn/public_files/2019/10/10/def31d2e6d79ed2790864a4aa8a94349.png);
  background-size: 100% 100%;
  padding-top: 50px;
}
.desc__shop-info {
  margin-left: 10px;
  height: 100%;
}
.desc__shop-info .leader {
  padding-top: 6px;
}
.desc__shop-info .leader .text {
  position: relative;
  top: 1px;
  font-size: 7px;
  line-height: 9px;
  color: #979797;
  float: bottom;
}
.logo {
  box-sizing: border-box;
  position: relative;
  height: 47px;
  margin-left: 10px;
}
.logo .text {
  width: 45px;
}
.desc__shop-info .logo .logo-img {
  position: absolute;
  top: 3px;
  left: 3px;
  bottom: -2px;
  width: 30px;
  height: 30px;
  border-radius: 100rpx;
  vertical-align: bottom;
}
.desc__shop-info .logo .text {
  position: absolute;
  bottom: 0;
  font-size: 8px;
  line-height: 11px;
  color: #fff;
}
.clearfix:after {
  height: 0;
  content: "";
  visibility: hidden;
  clear: both;
  display: block;
}
.desc__shop-info .leader .text {
  float: left;
  padding-top: 2rpx;
}
.reward-list-wrapper {
  margin-bottom: 120px;
}
