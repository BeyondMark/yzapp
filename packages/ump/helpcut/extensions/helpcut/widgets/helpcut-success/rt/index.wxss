.cut-success-pop {
  background-color: transparent !important;
}
.cut-success-pop .cut-success-wrapper {
  display: flex;
  flex-direction: column;
}
.cut-success-pop .cut-success-wrapper .coupon-wrapper {
  width: 80vw;
  background: linear-gradient(to left bottom, #f65a1c, #f72a3e);
  font-size: 14px;
  padding: 36px 20px 30px 20px;
  display: flex;
  flex-direction: column;
  text-align: center;
  border-radius: 5px;
  box-shadow: inset 0 0 30px #9c0a0a, 0 2px 4px #000;
}
.cut-success-pop .cut-success-wrapper .coupon-wrapper .gift-image {
  background-image: url(https://b.yzcdn.cn/wsc-minapp/bargain-detail/home/2018-08-06/gift.png);
  width: 196px;
  height: 90px;
  background-size: contain;
  background-repeat: no-repeat;
  margin-bottom: 20px;
  align-self: center;
}
.cut-success-pop .cut-success-wrapper .coupon-wrapper .coupon-tip {
  color: #fff;
}
.cut-success-pop
  .cut-success-wrapper
  .coupon-wrapper
  .coupon-tip
  .coupon-price {
  color: #fff;
  font-size: 24px;
  font-weight: 600;
}
.cut-success-pop .cut-success-wrapper .coupon-wrapper .gift-tip {
  color: #fff;
  margin-top: 15px;
}
.cut-success-pop .cut-success-wrapper .coupon-wrapper .crete-cut-btn {
  font-size: 14px;
  color: #911414;
  border-radius: 20px;
  margin: 30px 0 0 0;
  background: #fbc31b;
  height: 40px;
  line-height: 40px;
}
.cut-success-pop .cut-success-wrapper .cut-close {
  margin-top: 14px;
  color: #fff;
  font-size: 24px;
  align-self: center;
}
