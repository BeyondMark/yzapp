@keyframes rotate {
  0% {
    -webkit-transform: rotate(0deg);
  }
  50% {
    -webkit-transform: rotate(180deg);
  }
  to {
    -webkit-transform: rotate(1turn);
  }
}
@keyframes rotate-reverse {
  0% {
    -webkit-transform: rotate(0deg);
  }
  50% {
    -webkit-transform: rotate(-180deg);
  }
  to {
    -webkit-transform: rotate(-1turn);
  }
}
.a-rotate {
  animation: rotate 10s linear infinite;
}
.a-rotate-reverse {
  animation: rotate-reverse 10s linear infinite;
}
@keyframes breath {
  0% {
    -webkit-transform: scale(1);
  }
  50% {
    -webkit-transform: scale(0.9);
  }
  to {
    -webkit-transform: scale(1);
  }
}
@keyframes breath-reverse {
  0% {
    -webkit-transform: scale(0.9);
  }
  50% {
    -webkit-transform: scale(1);
  }
  to {
    -webkit-transform: scale(0.9);
  }
}
.a-breath {
  animation: breath 0.8s linear infinite;
}
.a-breath-reverse {
  animation: breath-reverse 0.8s linear infinite;
}
@keyframes goods-breath {
  0% {
    -webkit-transform: scale(1);
  }
  50% {
    -webkit-transform: scale(0.9);
  }
  to {
    -webkit-transform: scale(1);
  }
}
@keyframes goods-breath-reverse {
  0% {
    -webkit-transform: scale(0.85);
  }
  50% {
    -webkit-transform: scale(1);
  }
  to {
    -webkit-transform: scale(0.85);
  }
}
.a-goods-breath {
  animation: breath 1.2s linear infinite;
}
.a-goods-breath-reverse {
  animation: breath-reverse 1.2s linear infinite;
}
@keyframes fade-show {
  0% {
    -webkit-transform: scale(0.3);
  }
  60% {
    -webkit-transform: scale(1.05);
  }
  to {
    -webkit-transform: scale(1);
  }
}
@keyframes fade-hide {
  0% {
    -webkit-transform: scale(1);
  }
  55% {
    -webkit-transform: scale(0.8);
  }
  to {
    opacity: 0;
  }
}
.a-fade-show {
  animation: fade-show 0.55s linear 1;
}
.a-fade-hide {
  animation: fade-hide 0.65s linear 1;
}
.helpcut-block {
  padding-bottom: 16px;
}
.activity-status {
  position: relative;
  background-color: #fff;
  border-radius: 16px;
  margin: 0 16px;
  padding: 32px 26px 24px;
  text-align: center;
  font-size: 18px;
}
.activity-status .cutdown {
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -65px;
  min-width: 130px;
  height: 30px;
  padding: 0 6px;
  box-sizing: border-box;
  line-height: 30px;
  background-color: #ffefdb;
  color: #ff1c00;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
  font-size: 12px;
  font-weight: bolder;
}
.activity-status .cutdown .seconds {
  width: 18px;
  display: inline-block;
  text-align: left;
}
.activity-status .cutdown .hasMilliseconds {
  width: 28px;
}
.activity-status .cutdown .cutdown-after {
  font-weight: 400;
}
.activity-status .status {
  line-height: 24px;
  text-align: center;
  font-weight: bolder;
  margin-bottom: 10px;
}
.activity-status .tip {
  display: flex;
  justify-content: center;
  align-items: baseline;
  line-height: 30px;
  font-weight: bolder;
}
.activity-status .tip .price {
  color: #ff1c00;
}
.activity-status .tip .priceBig {
  font-size: 24px;
  color: #ff1c00;
}
.activity-status .process {
  position: relative;
  padding: 12px 16px 0;
}
.activity-status .process .block {
  width: 100%;
  height: 12px;
  background-color: rgba(255, 28, 0, 0.1);
  border-radius: 6px;
}
.activity-status .process .bar {
  width: 0;
  will-change: width;
  height: 12px;
  border-radius: 6px;
  transition: width 1s ease;
}
.activity-status .process .bar,
.helpcut-button {
  background-image: linear-gradient(90deg, #ff8947 1%, #f7351d 99%);
}
.helpcut-button {
  position: relative;
  margin: auto;
  margin-top: 32px;
  width: 290px;
  height: 44px;
  line-height: 44px;
  border-radius: 22px;
  font-family: PingFangSC-Semibold;
  font-size: 16px;
  color: #fff;
  text-align: center;
  font-weight: bolder;
}
.not-click {
  opacity: 0.5;
  pointer-events: none;
}
.restart-button {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #ff1c00;
  text-align: center;
  line-height: 32px;
  margin-top: 20px;
  font-weight: bolder;
}
.restart-button > text {
  font-size: 18px;
}
