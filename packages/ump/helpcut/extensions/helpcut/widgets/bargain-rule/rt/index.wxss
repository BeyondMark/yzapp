.bargain-rule .rule-description {
  position: absolute;
  z-index: 1;
  right: 12px;
  top: 12px;
  padding: 3px 6px 3px 6px;
  font-size: 12px;
  border-radius: 10px;
  background-color: rgba(0, 0, 0, 0.2);
  color: #f8f8f8;
}
.rules-popup {
  border-radius: 12px 12px 0 0;
  padding: 0 16px 7px;
  box-sizing: border-box;
  max-height: 95vh !important;
}
.rules-popup .popup-title {
  position: relative;
  height: 44px;
  text-align: center;
  font-size: 16px;
  line-height: 44px;
  font-family: PingFangSC-Medium;
}
.rules-popup .popup-title .close-icon {
  position: absolute;
  top: 11px;
  right: 0;
  content: "";
  width: 22px;
  height: 22px;
  background: url(https://b.yzcdn.cn/public_files/d542190bf6bb53eb8c71b9e6b953967c.png)
    no-repeat 50%;
  background-size: 100% 100%;
}
.rules-popup .rules-btn {
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  background-image: linear-gradient(90deg, #ff6034, #ee0a24);
  border-radius: 100px;
  color: #fff;
  text-align: center;
  margin-top: 20px;
  margin-bottom: 8px;
}
