@keyframes rotate {
  0% {
    -webkit-transform: rotate(0deg);
  }
  50% {
    -webkit-transform: rotate(180deg);
  }
  to {
    -webkit-transform: rotate(1turn);
  }
}
@keyframes rotate-reverse {
  0% {
    -webkit-transform: rotate(0deg);
  }
  50% {
    -webkit-transform: rotate(-180deg);
  }
  to {
    -webkit-transform: rotate(-1turn);
  }
}
.a-rotate {
  animation: rotate 10s linear infinite;
}
.a-rotate-reverse {
  animation: rotate-reverse 10s linear infinite;
}
@keyframes breath {
  0% {
    -webkit-transform: scale(1);
  }
  50% {
    -webkit-transform: scale(0.9);
  }
  to {
    -webkit-transform: scale(1);
  }
}
@keyframes breath-reverse {
  0% {
    -webkit-transform: scale(0.9);
  }
  50% {
    -webkit-transform: scale(1);
  }
  to {
    -webkit-transform: scale(0.9);
  }
}
.a-breath {
  animation: breath 0.8s linear infinite;
}
.a-breath-reverse {
  animation: breath-reverse 0.8s linear infinite;
}
@keyframes goods-breath {
  0% {
    -webkit-transform: scale(1);
  }
  50% {
    -webkit-transform: scale(0.9);
  }
  to {
    -webkit-transform: scale(1);
  }
}
@keyframes goods-breath-reverse {
  0% {
    -webkit-transform: scale(0.85);
  }
  50% {
    -webkit-transform: scale(1);
  }
  to {
    -webkit-transform: scale(0.85);
  }
}
.a-goods-breath {
  animation: breath 1.2s linear infinite;
}
.a-goods-breath-reverse {
  animation: breath-reverse 1.2s linear infinite;
}
@keyframes fade-show {
  0% {
    -webkit-transform: scale(0.3);
  }
  60% {
    -webkit-transform: scale(1.05);
  }
  to {
    -webkit-transform: scale(1);
  }
}
@keyframes fade-hide {
  0% {
    -webkit-transform: scale(1);
  }
  55% {
    -webkit-transform: scale(0.8);
  }
  to {
    opacity: 0;
  }
}
.a-fade-show {
  animation: fade-show 0.55s linear 1;
}
.a-fade-hide {
  animation: fade-hide 0.65s linear 1;
}
.block-frameless {
  width: 100%;
  background-color: transparent !important;
}
.block {
  position: relative;
  background: url(https://img01.yzcdn.cn/upload_files/2021/11/08/FuqgbxJ5qzAoeyt45aLmeI1N0ay1.png);
  background-size: contain;
  background-position-x: center;
  background-repeat: no-repeat;
  width: 320px;
  margin: auto;
  padding: 24px 0 45px;
  font-weight: bolder;
}
.block > .title {
  font-size: 20px;
  color: #fff;
  text-align: center;
  line-height: 32px;
  margin-bottom: 20px;
}
.block > .detail {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  color: #ffeea4;
}
.block > .detail .price {
  font-size: 60px;
  height: 60px;
  overflow: hidden;
  background-image: linear-gradient(180deg, #fff, #feff7c);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.block > .detail .unit {
  font-size: 30px;
  margin-left: 10px;
}
