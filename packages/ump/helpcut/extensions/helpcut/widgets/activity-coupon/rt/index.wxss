.coupon-pop {
  background-color: transparent !important;
}
.coupon-pop .coupon-wrapper {
  display: flex;
  flex-direction: column;
}
.coupon-pop .coupon-wrapper .coupon-content {
  width: 80vw;
  background: linear-gradient(to left bottom, #f65a1c, #f72a3e);
  font-size: 14px;
  padding: 36px 20px 30px 20px;
  display: flex;
  flex-direction: column;
  text-align: center;
  border-radius: 5px;
  box-shadow: inset 0 0 30px #9c0a0a, 0 2px 4px #000;
}
.coupon-pop .coupon-wrapper .coupon-content .cut-tip {
  color: #fff;
}
.coupon-pop .coupon-wrapper .coupon-content .cut-tip .coupon-price {
  color: #fff;
  font-size: 24px;
  font-weight: 600;
}
.coupon-pop .coupon-wrapper .coupon-content .coupon-tip {
  color: #fff;
  margin-top: 15px;
  margin-bottom: 15px;
}
.coupon-pop .coupon-wrapper .coupon-content .tap {
  background: linear-gradient(180deg, #bf2b2a, #bf412a);
  text-align: center;
  height: 16px;
  border-radius: 8px;
}
.coupon-pop .coupon-wrapper .coupon-content .coupon-detail {
  padding: 25px 10px 25px 10px;
  display: flex;
  flex-direction: column;
  margin: -8px 10px 0 10px;
  background: #fff;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  box-shadow: inset 0 1px 3px #000;
}
.coupon-pop .coupon-wrapper .coupon-content .coupon-detail .detail-content {
  box-shadow: 0 5px 10px rgba(247, 42, 62, 0.3);
  display: flex;
  height: 64px;
}
.coupon-pop
  .coupon-wrapper
  .coupon-content
  .coupon-detail
  .detail-content
  .left-block {
  background: linear-gradient(to left bottom, #fa893d, #ed3862);
  flex-grow: 1;
  display: flex;
  font-weight: 600;
  padding: 7px;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.coupon-pop
  .coupon-wrapper
  .coupon-content
  .coupon-detail
  .detail-content
  .left-block
  .coupon-value {
  color: #fff;
  font-size: 24px;
}
.coupon-pop
  .coupon-wrapper
  .coupon-content
  .coupon-detail
  .detail-content
  .left-block
  .coupon-limit {
  color: #fff;
  font-size: 10px;
}
.coupon-pop
  .coupon-wrapper
  .coupon-content
  .coupon-detail
  .detail-content
  .right-block {
  flex-grow: 3;
  text-align: left;
  padding: 12px 10px 12px 10px;
  display: flex;
  flex-direction: column;
}
.coupon-pop
  .coupon-wrapper
  .coupon-content
  .coupon-detail
  .detail-content
  .right-block
  .coupon-name {
  font-size: 14px;
  color: #333;
  flex-grow: 1;
}
.coupon-pop
  .coupon-wrapper
  .coupon-content
  .coupon-detail
  .detail-content
  .right-block
  .coupon-time {
  font-size: 10px;
  color: #999;
}
.coupon-pop .coupon-wrapper .coupon-content .use-button {
  font-size: 14px;
  color: #911414;
  border-radius: 20px;
  margin: 35px 0 0 0;
  background: #fbc31b;
  height: 40px;
  line-height: 40px;
}
.coupon-pop .coupon-wrapper .coupon-close {
  margin-top: 14px;
  color: #fff;
  font-size: 24px;
  align-self: center;
}
