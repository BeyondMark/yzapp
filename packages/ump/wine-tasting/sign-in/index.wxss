.wine-tasking-sign-in {
  background-color: #fff;
  height: 100vh;
  box-sizing: border-box;
  align-items: center;
  display: flex;
  justify-content: center;
}
.wine-tasking-sign-in .sign-in-group {
  position: absolute;
  width: 90%;
  top: 250rpx;
  border-radius: 16rpx;
  align-items: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.wine-tasking-sign-in .sign-in-group .sign-in-icon {
  position: relative;
  top: -30rpx;
  font-size: 100rpx;
  width: 102rpx;
  height: 102rpx;
  display: block;
  color: #45a110;
}
.wine-tasking-sign-in .sign-in-group .sign-in-icon.error {
  color: #d42f15;
}
.wine-tasking-sign-in .sign-in-group .sign-in-tip {
  padding: 0 0 80rpx 0;
  align-items: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
  color: #323233;
}
.wine-tasking-sign-in .sign-in-group .sign-in-tip .sign-in-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
}
.wine-tasking-sign-in .sign-in-group .sign-in-tip .sign-in-desc {
  font-size: 28rpx;
}
.copyright {
  position: absolute;
  bottom: 30rpx;
  width: 100%;
}
