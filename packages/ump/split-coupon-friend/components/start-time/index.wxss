.start-time {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #323233;
  letter-spacing: 0;
  margin-bottom: 16px;
}
.start-time__label,
.start-time__time {
  white-space: nowrap;
}
.start-time__time {
  margin-left: 4px;
  min-width: 65px;
}
.start-time__time .text {
  color: #ff0f01;
  font-weight: 500;
}
.start-time__time_more-one-day {
  min-width: 100px;
}
.start-time:after,
.start-time:before {
  content: "";
  display: block;
  width: 55px;
  height: 1px;
  background: linear-gradient(90deg, #fff 0, #f5958c);
  opacity: 0.3;
  margin-right: 8px;
  flex-grow: 1;
}
.start-time:after {
  transform: rotate(180deg);
  margin-right: 0;
  margin-left: 8px;
}
.split-coupon-friend-activity-info__help-tips {
  white-space: nowrap;
}
.split-coupon-friend-activity-info__help-num {
  color: red;
  font-weight: 500;
}
