@import "/common/css/helper/index.wxss";
.goods-wrap {
  width: 200px;
  height: 230px;
  margin: 0 auto;
  padding: 20px 20px 16px 20px;
  border: 1px solid #e9e9e9;
  border-radius: 4px;
  box-sizing: border-box;
  position: relative;
}
.goods-img {
  width: 160px;
  height: 160px;
  position: relative;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  background: #f9f9f9;
  background-size: cover;
  margin-bottom: 14px;
}
.goods-img image {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: auto;
  height: auto;
  max-width: 100%;
  max-height: 100%;
}
.icon-bowknot {
  width: 41px;
  height: 15px;
  background-image: url(https://img01.yzcdn.cn/public_files/2018/09/25/ed91ff50aa56a526345aae0e6882370a.jpeg);
  background-size: 21px 15px;
  background-repeat: no-repeat;
  background-position: 50%;
  background-color: #fff;
  position: absolute;
  top: -5.5px;
  left: 50%;
  margin-left: -20.5px;
}
