.receive-btn {
  width: 50%;
  text-align: center;
  height: 50px;
  line-height: 50px;
  display: inline-block;
  font-size: 16px;
}
.receive-btn--left {
  width: 50%;
  float: left;
  background: #fff;
  color: #333;
  border-radius: 2px 0 0 2px;
}
.receive-btn--right {
  background: #e0493f;
  color: #fff;
  border-radius: 0 2px 2px 0;
}
.receive-btn--whole {
  background: #e0493f;
  color: #fff;
  width: 100%;
  border-radius: 2px;
  font-size: 18px;
}
