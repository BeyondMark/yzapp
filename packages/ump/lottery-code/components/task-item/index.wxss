.task {
  position: relative;
  justify-content: space-between;
  padding: 15px;
}
.task,
.task-left {
  display: flex;
  align-items: center;
}
.task .icon {
  position: relative;
  margin-right: 7px;
  width: 36px;
  height: 36px;
  border-radius: 11px;
  overflow: hidden;
  background: #fef0f0;
}
.task .icon-img {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  max-width: 100%;
  max-height: 100%;
}
.task .title {
  margin-bottom: 7px;
  font-size: 16px;
  line-height: 14px;
}
.task .desc {
  font-size: 12px;
  color: #999;
  line-height: 12px;
  font-family: PingFangSC-Multiple;
}
.task .desc-strong {
  font-weight: 700;
  margin: 0 3px;
}
.task .task-btn {
  width: 60px;
  height: 24px;
  font-size: 12px;
  line-height: 22px;
  border-radius: 11px;
  padding: 0;
  font-family: PingFangSC-Medium;
  box-sizing: border-box;
}
.task:after {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  right: 0;
  bottom: 0;
  left: 16px;
  border-bottom: 1px solid #ebedf0;
  transform: scaleY(0.5);
}
.task__unline:last-child:after {
  display: none;
}
