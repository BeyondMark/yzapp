.trade-carousel {
  margin-bottom: 10px;
  width: 92vw;
  background: #fff0db;
  border: 1px solid rgba(255, 68, 68, 0.5);
  border-radius: 4px;
  overflow: hidden;
}
.trade-carousel__swipe {
  height: 32px;
  color: #fff;
  font-size: 12px;
  line-height: 32px;
}
.trade-carousel__swipe-item {
  display: flex;
  align-items: center;
  padding: 0 9px;
  border-radius: 4px;
}
.trade-carousel__swipe-avatar {
  margin-right: 6px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  overflow: hidden;
}
.trade-carousel__swipe-avatar image {
  width: 100%;
  height: 100%;
}
.trade-carousel__swipe-text {
  color: #f44;
  font-size: 12px;
}
.trade-carousel__swipe .strong {
  color: #333;
}
.move-enter-active {
  animation: move-in 0.5s;
}
.move-leave-active {
  animation: move-out 0.3s;
  animation-fill-mode: forwards;
}
@keyframes move-in {
  0% {
    transform: translateY(32px);
  }
  to {
    transform: translateY(0);
  }
}
@keyframes move-out {
  0% {
    transform: translateY(0);
  }
  to {
    transform: translateY(-32px);
  }
}
