.pop-container {
  max-height: 90vh;
  border-radius: 20px 20px 0 0;
}
.pop-container .close-icon {
  position: absolute;
  top: 11px;
  right: 16px;
  color: #999;
}
.pop-container .header {
  font-family: PingFangSC-Medium;
}
.pop-container .header,
.pop-container .pop-btn {
  height: 44px;
  line-height: 44px;
  font-size: 16px;
  text-align: center;
}
.pop-container .pop-btn {
  margin: 15px auto 8px;
  width: 86.4vw;
  border-radius: 100px;
  color: #fff;
  background-image: linear-gradient(135deg, #ff5644, #fb1c60);
}
