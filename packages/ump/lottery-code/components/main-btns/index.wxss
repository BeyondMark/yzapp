@keyframes translate {
  0% {
    transform: scale(0.98);
  }
  to {
    transform: scale(1.05);
  }
}
.btn-content {
  margin-top: 20px;
}
.card-btn {
  display: block;
  margin: 0 0 12px;
  height: 44px;
  line-height: 44px !important;
  border-radius: 22px !important;
  background-image: linear-gradient(135deg, #ff5644, #fb1c60) !important;
  font-size: 16px !important;
  color: #fff !important;
  text-align: center;
  animation: translate 0.8s infinite;
  box-sizing: border-box;
}
.card-btn__disable {
  background: #c8c9cc !important;
  animation: none;
}
.card-btn__bottom {
  margin-top: 8px;
  border: 1px solid #f44;
  color: #f44 !important;
  background-color: #fff !important;
  background-image: none !important;
  animation: none;
}
.card-btn__sub {
  padding-top: 4px;
  line-height: 22px !important;
}
.none-animation {
  animation: none;
}
.card-btn-text {
  display: block;
  font-size: 10px;
  line-height: 14px;
}
