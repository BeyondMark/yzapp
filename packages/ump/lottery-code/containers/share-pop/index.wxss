.share-popup {
  margin: 0 auto;
  padding: 104px 0;
  background-color: transparent !important;
  text-align: center;
}
.share-popup__close {
  position: absolute;
  top: 64px;
  right: 0;
  padding: 0 0 8px 8px;
  background-image: none;
  width: 27px;
  height: 27px;
  color: #fff;
  background: url(https://img01.yzcdn.cn/public_files/2019/09/05/c6c31abc9bad9160ba634e0c65f14c7b.png)
    no-repeat 50%;
  background-size: 27px 27px;
  background-position: 100%;
}
.share-popup__content {
  width: 292px;
  height: 458px;
  border-radius: 8px;
  overflow: hidden;
}
.share-popup__content image {
  width: 100%;
  height: 100%;
}
.share-popup__btn {
  border: 1px solid #fff;
  margin: 19px auto 0;
  border-radius: 50px;
  width: 240px;
  height: 44px;
  line-height: 44px;
  color: #fff;
  font-size: 16px;
}
.share-popup__tip {
  margin-top: 10px;
  font-size: 12px;
  line-height: 17px;
  color: hsla(0, 0%, 100%, 0.6);
}
