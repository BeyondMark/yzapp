.goods-list {
  margin-top: 10px;
  padding: 0 16px 8px;
  background: #fff;
}
.goods-list .title {
  display: flex;
  align-items: center;
  padding: 15px 0;
  font-size: 14px;
  line-height: 18px;
  text-align: center;
}
.goods-list .title:after,
.goods-list .title:before {
  display: block;
  flex: 1;
  content: "";
  width: 118px;
  height: 1px;
  background: #ebedf0;
}
.goods-list .title:after {
  margin-left: 12px;
}
.goods-list .title:before {
  margin-right: 12px;
}
.goods-list .lists {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goods-list .lists .goods {
  margin-bottom: 8px;
  width: 44.53vw;
}
.goods-list .lists .goods-img {
  position: relative;
  width: 100%;
  height: 44.53vw;
  border-radius: 4px;
  overflow: hidden;
}
.goods-list .lists .goods-img .img {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  max-width: 100%;
  max-height: 100%;
}
.goods-list .lists .goods-title {
  font-size: 13px;
  margin: 8px 0 22px;
  line-height: 18px;
  height: 36px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-list .lists .goods-price {
  font-family: Avenir-Heavy;
  font-size: 16px;
  color: #ee0a24;
  letter-spacing: 0;
  line-height: 20px;
}
