.split-coupon {
  box-sizing: border-box;
  background-repeat: no-repeat;
  background-size: 100%auto;
  background-position: top;
}
.activity-title {
  font-size: 16px;
  font-family: PingFangSC-Medium;
  line-height: 22px;
  color: #323232;
}
.activity-title .strong {
  color: #ee0a24;
}
.activity-money {
  margin: 16px 0 24px;
  color: #ee0a24;
  font-size: 14px;
}
.activity-money .strong {
  margin-right: 2px;
  font-size: 36px;
  font-family: PingFangSC-Semibold;
}
@keyframes translate {
  0% {
    transform: scale(0.98);
  }
  to {
    transform: scale(1.05);
  }
}
.btn {
  display: block !important;
  width: 260px;
  height: 44px !important;
  line-height: 44px !important;
  color: #fff !important;
  border-radius: 22px !important;
  animation: translate 0.8s infinite;
  font-size: 16px;
  margin-left: auto !important;
  margin-right: auto !important;
}
.btn__red {
  background-image: linear-gradient(90deg, #ff6034, #ee0a24);
}
.btn__yellow {
  background-image: linear-gradient(90deg, #ffce28 3%, #ffac24 96%);
}
.btn__top {
  margin-bottom: 16px !important;
}
.btn__bottom,
.btn__top,
.btn__wechat {
  animation: none;
}
.btn__wechat:before {
  position: relative;
  top: 3px;
  margin-right: 7px;
  content: "";
  width: 20px;
  height: 17px;
  display: inline-block;
  background: url(https://b.yzcdn.cn/public_files/2018/04/10/5fc7cf49641ad786bbe6024fa215a02a.png)
    no-repeat 50%;
  background-size: 100% 100%;
}
.pop {
  text-align: center;
  background-color: transparent !important;
  padding-top: 32px;
  border-radius: 8px;
  width: 270px;
}
.pop-header {
  position: relative;
  padding-top: 51px;
  box-sizing: border-box;
  border-radius: 8px 8px 0 0;
  background-image: url(https://b.yzcdn.cn/public_files/1196094dbb6ab9d2ef4c5435f38e1ced.png);
  background-size: 100%auto;
  background-repeat: no-repeat;
  background-position: bottom;
  background-color: #fff;
}
.pop-header .header-img {
  width: 143px;
  height: 75px;
  position: absolute;
  top: -32px;
  left: 0;
  right: 0;
  margin: auto;
}
.pop-header .header-img__fail {
  width: 102px;
}
.pop-header .header-title {
  color: #fff;
  font-size: 16px;
  line-height: 21px;
  padding-bottom: 20px;
  font-family: PingFangSC-Medium;
  white-space: pre-wrap;
}
.pop-header .header-title .strong {
  color: #fff0b3;
}
.pop-header .header-close {
  position: absolute;
  padding: 7px;
  top: 2px;
  right: 2px;
  color: #fff;
  font-size: 16px;
}
.pop-content {
  position: relative;
  padding: 20px 0 24px;
  background-color: #fff;
  margin-top: -1px;
}
.pop-btn {
  width: 230px;
}
.pop .invite {
  margin-top: 16px;
  color: #969799;
  font-size: 14px;
}
.pop-content .activity-money {
  margin: 12px 0 20px;
}
