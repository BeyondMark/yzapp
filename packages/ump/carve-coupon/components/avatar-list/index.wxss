.avatar-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto 4px;
  width: 198px;
}
.avatar-list .avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24px;
  margin-bottom: 20px;
}
.avatar-list .avatar:nth-child(3n) {
  margin-right: 0;
}
.avatar-list .avatar image {
  width: 50px;
  height: 50px;
}
.avatar-list .avatar__opacity {
  opacity: 0.5;
}
.avatar-list__len {
  width: 272px;
}
.avatar-list__len .avatar:nth-child(4n) {
  margin-left: 20px;
  margin-right: 0;
}
.default-avatar {
  display: block;
  width: 50px;
  height: 50px;
  background: url(https://img01.yzcdn.cn/public_files/2018/11/13/67444bebc957bd7e7470995b92c3b03a.png)
    no-repeat 50%;
  background-size: 50px 50px;
}
.avtart-list__top {
  margin-top: 24px;
}
