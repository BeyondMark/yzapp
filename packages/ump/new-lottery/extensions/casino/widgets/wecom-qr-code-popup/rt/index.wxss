.qr-popup {
  overflow: visible;
  width: 290px;
  height: 356px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 16px;
  box-sizing: border-box;
  background: no-repeat
    url(https://img01.yzcdn.cn/upload_files/2023/04/14/FsTOUB4rLpjSOb58wxnrBflVXnHf.png)
    50%;
  background-size: 100%;
}
.qr-popup__title {
  margin-top: 30px;
  font-weight: 600;
  font-size: 26px;
  line-height: 36px;
  color: #e14141;
}
.qr-popup__desc {
  margin-top: 16px;
  color: #d08e86;
  font-weight: 500;
  font-size: 14px;
  line-height: 24px;
}
.qr-popup__image_container {
  text-align: center;
  margin-top: 26px;
  padding: 0;
  border-radius: 4px;
}
.qr-popup__image {
  width: 144px;
  height: 144px;
}
.qr-popup__tap {
  text-align: center;
  margin-top: 16px;
  color: rgba(164, 39, 39, 0.5);
  font-weight: 400;
  font-size: 14px;
  line-height: 20px;
}
.qr-popup .close-btn {
  position: absolute;
  top: 13px;
  right: 4px;
  z-index: 20001;
  color: #da9287;
  font-size: 20px;
  transform: translateX(-50%);
}
