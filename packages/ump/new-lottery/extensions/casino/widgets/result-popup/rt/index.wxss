.result-popup {
  width: 324px;
  background: #fff;
  border-radius: 16px;
  padding: 0 12px;
  overflow: visible !important;
}
.result-popup .close-btn {
  position: absolute;
  top: -44px;
  right: -12px;
  z-index: 20001;
  color: #fff;
  font-size: 28px;
  transform: translateX(-50%);
}
.result-popup .result-count-down {
  font-size: 12px;
  color: #999;
}
.result__winning-popup {
  height: 338px;
  background-image: url(https://img01.yzcdn.cn/upload_files/2021/11/15/Fkl0shMv5jyjZOB-D0gEPgbKGnbE.png);
  background-size: cover;
}
.result__unwinning-popup {
  height: 258px;
}
.result__unwinning-icon {
  width: 60px;
  height: 60px;
  margin-bottom: 12px;
}
.result__unwinning-title {
  font-size: 20px;
  font-weight: 500;
  margin-bottom: 20px;
  line-height: 20px;
}
.result__unwinning-sub-title {
  font-size: 14px;
  line-height: 14px;
  color: #969799;
  max-width: 253px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.result__unwinning-container {
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 28px;
  justify-content: center;
  background-color: #fff;
}
.result-container {
  position: relative;
}
.result-container .result__sub-title {
  color: #fff;
  font-size: 16px;
  line-height: 16px;
  text-align: center;
  letter-spacing: 0.63px;
  margin-top: 58px;
  margin-bottom: 12px;
}
.result-container .result-title {
  color: #fff;
  font-size: 38px;
  font-weight: 500;
  padding-top: 32px;
  text-align: center;
  letter-spacing: 0.63px;
}
.result-container .result-prize {
  display: flex;
  border-radius: 8px;
  align-items: center;
  flex-direction: column;
  padding: 32px 0 4px 0;
  justify-content: center;
  background-color: #fff;
  box-shadow: 0 0 10px 0 rgba(199, 73, 67, 0.28);
}
.result-container .result-prize__icon {
  width: 60px;
  height: 60px;
}
.result-container .result-prize__name {
  color: #333;
  font-size: 20px;
  font-weight: 500;
  margin-top: 15px;
  line-height: 28px;
}
.result-container .result-prize__desc {
  color: #969799;
  font-size: 14px;
  margin-top: 4px;
  line-height: 20px;
  max-width: 253px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.result-btns {
  display: flex;
  margin: 20px 22px;
  justify-content: space-between;
}
.result-btns__general,
.result-btns__message-contact {
  border: none;
  color: #fff;
  padding: 9px 0;
  font-size: 14px;
  line-height: 20px;
  position: relative;
  text-align: center;
  border-radius: 20px;
  width: 253px;
  height: 40px;
  background-color: #f34900;
}
.result-btns__general:before,
.result-btns__message-contact:before {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  opacity: 0;
  width: 100%;
  height: 100%;
  border: inherit;
  border-color: #000;
  border-radius: inherit;
  background-color: #000;
  transform: translate(-50%, -50%);
}
.result-btns__general:active:before,
.result-btns__message-contact:active:before {
  opacity: 0.15;
}
.result-btns__share {
  width: 120px;
  color: #f6403c;
  background: transparent;
  border: 1px solid #f6403c;
}
.result-btns__message-contact,
.result-btns__use {
  width: 253px;
  background-image: linear-gradient(-135deg, #f63d3d, #ff9134);
}
.result-btns__nav {
  width: 263px;
  background: #fa5757;
  margin: 0 22px 20px 22px;
  border: 1px solid #fa5757;
}
.result-btns__groups {
  display: flex;
  margin: 20px 22px 15px 22px;
  justify-content: space-between;
}
