  height: 8px;
  background-color: #c8c9cc;
  border-radius: 1rem;
}
.prb .intro__text {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 13px;
}
.prb .intro__desc {
  margin-top: 15px;
  color: #646566;
  font-size: 13px;
}
