.t-text {
  display: inline-block;
  text-decoration: inherit;
}
.guarantee-effective {
  height: 80vh;
}
.guarantee-effective__container {
  position: relative;
  width: 100%;
  padding: 16px 0;
  box-sizing: border-box;
  display: flex;
  height: 100%;
  flex-direction: column;
}
.guarantee-effective__title {
  font-size: 16px;
  text-align: center;
  color: #39393a;
  font-weight: 700;
  line-height: 22px;
}
.guarantee-effective__content {
  margin: 20px 0 0;
  padding: 0 18px;
  overflow-y: auto;
  flex: auto;
}
.guarantee-effective__content .content1 {
  margin-bottom: 24px;
}
.guarantee-effective__sub-title {
  font-size: 14px;
  color: #323233;
  margin-bottom: 4px;
}
.guarantee-effective__sub-title:before {
  content: "Â· ";
}
.guarantee-effective__desc {
  margin-bottom: 12px;
  font-size: 12px;
  color: #969799;
  line-height: 1.5;
}
.guarantee-effective__desc .navigator {
  margin-left: 2px;
  color: #38f;
}
.guarantee-effective__list {
  display: flex;
  flex-wrap: wrap;
  border: 1px solid #dcdee0;
  border-radius: 4px;
  font-size: 12px;
}
.guarantee-effective__inline {
  display: inline-block;
}
.guarantee-effective__list-item {
  flex: 0 0 50%;
  display: inline-flex;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
  height: 44px;
  padding: 6px 12px;
  line-height: 16px;
  border-bottom: 1px solid #dcdee0;
}
.guarantee-effective__list-item:nth-child(odd) {
  background-color: #f7f8fa;
  border-right: 1px solid #dcdee0;
}
.guarantee-effective__list-item:last-child,
.guarantee-effective__list-item:nth-last-child(
    2
  ).guarantee-effective__list-item:nth-child(odd) {
  border-bottom: none;
}
.guarantee-effective__list-item .t-icon {
  font-size: 16px;
}
