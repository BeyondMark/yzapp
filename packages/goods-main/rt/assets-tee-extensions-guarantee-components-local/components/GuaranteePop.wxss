.t-text {
  text-decoration: inherit;
}
.t-text,
.tee-image {
  display: inline-block;
}
.tee-image {
  width: 100%;
  height: 100%;
}
.guarantee-pop {
  height: 80vh;
}
.guarantee-pop__container {
  display: flex;
  flex-direction: column;
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 0 12px 0;
  background-image: url(https://b.yzcdn.cn/public_files/2879e62fdc4f602a520fdd752e8d0fb9.png),
    linear-gradient(to bottom left, #e5f7ee, #cafde4);
  background-repeat: no-repeat, no-repeat;
  background-size: 125px, auto;
  background-position-y: -10px;
}
.guarantee-pop__title {
  text-align: center;
  margin-top: 24px;
  z-index: 1;
}
.guarantee-pop__title .logo {
  width: 88px;
  height: 24px;
  display: inline-block;
}
.guarantee-pop__title .logo.youzan {
  width: 142px;
}
.guarantee-pop__content {
  padding: 24px 16px 0;
  text-align: center;
  margin-top: 24px;
  overflow: scroll;
  border-radius: 16px 16px 0 0;
  background-color: #fff;
  z-index: 1;
}
.guarantee-pop__content-title {
  position: relative;
  margin-top: 8px;
  margin-bottom: 24px;
  color: #3a3a3a;
  font-weight: 500;
  font-size: 16px;
  line-height: 1.13;
  text-align: center;
}
.guarantee-pop__content-title:before {
  position: absolute;
  top: 8px;
  width: 20px;
  height: 1px;
  margin-left: -32px;
  background-image: linear-gradient(90deg, rgba(7, 193, 96, 0), #07c160);
  content: "";
}
.guarantee-pop__content-title:after {
  position: absolute;
  top: 8px;
  width: 20px;
  height: 1px;
  margin-left: 12px;
  background-image: linear-gradient(270deg, rgba(7, 193, 96, 0), #07c160);
  content: "";
}
.guarantee-pop__footer {
  flex-grow: 1;
  font-size: 12px;
  line-height: 1.33;
  text-align: center;
  color: #c8c9cc;
  padding: 32px 0 16px;
  background-color: #fff;
  z-index: 1;
}
.guarantee-pop__footer .bottom-logo {
  width: 52px;
  height: 15px;
  vertical-align: sub;
  margin: 0 8px;
  display: inline-block;
}
.guarantee-pop__footer .bottom-logo.youzan {
  width: 148px;
}
.guarantee-pop__footer .t-icon {
  vertical-align: middle;
}
.guarantee-pop__footer-help {
  margin: 20px 16px 5px;
  text-align: center;
  border: 1px solid #dcdee0;
  border-radius: 22px;
  height: 40px;
  line-height: 40px;
  color: #323233;
}
.guarantee-pop__time {
  width: 100%;
  font-size: 14px;
  color: #333;
  box-sizing: border-box;
  margin-top: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.guarantee-pop__time_img {
  position: relative;
  height: 22px;
  margin-right: 6px;
}
.guarantee-pop__time_img .icon {
  height: 22px;
  width: 20px;
  display: inline-block;
}
.guarantee-pop__time_num {
  position: absolute;
  left: 5.5px;
  top: 2px;
  font-size: 14px;
  font-weight: 700;
  color: #fff;
}
.guarantee-pop__time_num2 {
  font-weight: 500;
  display: inline-block;
  color: #07a54e;
}
.guarantee-pop__life {
  width: 100%;
  height: 72px;
  background: url(https://img01.yzcdn.cn/upload_files/2020/08/11/FmtCZE9qiaIJgoabNovXRmUrDv_M.png);
  background-repeat: no-repeat;
  background-size: 100%;
  padding: 14px 16px;
  box-sizing: border-box;
  margin-bottom: 24px;
  text-align: left;
}
.guarantee-pop__life.using {
  background-image: url(https://img01.yzcdn.cn/upload_files/2020/08/11/FqEO7mc62y9Q30euB93h-DZvJZly.png);
}
.guarantee-pop__life.using .content,
.guarantee-pop__life.using .label {
  color: #07c160;
}
.guarantee-pop__life.done .content,
.guarantee-pop__life.done .label {
  color: #323233;
}
.guarantee-pop__life .label {
  height: 24px;
  font-size: 18px;
  font-weight: 500;
  line-height: 1.33;
  color: #969799;
}
.guarantee-pop__life .content {
  height: 16px;
  font-size: 13px;
  line-height: 1.23;
  color: #969799;
  margin-top: 4px;
}
.guarantee-pop__bg-bottom {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 112px;
  background-image: linear-gradient(180deg, hsla(0, 0%, 100%, 0), #fff);
}
.guarantee-pop .hide-scrollbar {
  scrollbar-width: none;
  -ms-overflow-style: none;
}
.guarantee-pop .hide-scrollbar::-webkit-scrollbar {
  display: none;
}
