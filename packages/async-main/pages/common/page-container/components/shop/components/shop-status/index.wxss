@import "/common/css/helper/index.wxss";
.store-business__status-container {
  position: fixed;
  bottom: 0;
  width: 100vw;
  z-index: 30;
}
.iPhone-X:after {
  content: " ";
  height: 34px;
  background: #fff;
  width: 100%;
  display: block;
}
.store-business__status-container {
  position: fixed;
  bottom: 0;
  width: 100vw;
  z-index: 301;
  padding: 0 10px 15px;
  box-sizing: border-box;
}
.store-business__status-wrapper {
  border-radius: 8px;
  background: #fff;
  box-shadow: 0-2px 16px 0 rgba(0, 0, 0, 0.2);
  display: flex;
}
.store-business__status-wrapper-noradius {
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.store-business__status-container--fill {
  padding: 0;
}
.store-business__status-container-image {
  width: 64px;
  height: 45px;
  margin: 15px;
}
.store-business__status-tip {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20px 0 20px 15px;
  box-sizing: border-box;
  font-size: 12px;
}
.store-business__status-content {
  display: flex;
  align-items: flex-start;
  margin-top: 10px;
  color: #999;
  font-size: 12px;
  height: auto;
}
.store-business__status-tip-content {
  flex: 1;
}
.store-business__status-tip-image {
  width: 10px;
  height: 10px;
  margin-right: 5px;
  margin-top: 3px;
}
.store-business__status-tip > view:first-child {
  font-size: 16px;
  color: #111;
  line-height: 22px;
}
.store-business__status-tip-text {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #999;
  flex: 1;
}
