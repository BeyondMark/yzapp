.tee-image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.behavior-display {
  display: block;
  position: relative;
  margin: 16px 0;
  overflow: hidden;
}
.behavior-display__bg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.behavior-display__bg--refresh {
  position: absolute;
  background: url(data:image/png;base64,)
    no-repeat;
  background-size: 100%;
  right: 10px;
  top: 10px;
  width: 20px;
  height: 20px;
  cursor: pointer;
  z-index: 1;
}
.behavior-display__bg--img {
  position: absolute;
  left: 0;
  top: 0;
  transform-origin: left top;
}
