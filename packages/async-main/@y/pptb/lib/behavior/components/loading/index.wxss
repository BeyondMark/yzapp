@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(1turn);
  }
}
.component-display__loading {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #f2f2f2;
}
.component-display__loading-error {
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
  font-size: 40px;
  color: #d5d5d5;
}
.component-display__loading-icon {
  position: absolute;
  left: 50%;
  top: 40%;
  width: 40px;
  height: 40px;
  transform: translate(-50%, -50%);
  background: url(data:image/png;base64,)
    no-repeat;
  background-size: 100%;
  box-shadow: 0 4px 16px rgba(200, 201, 204, 0.5);
  border-radius: 50%;
}
.component-display__loading-icon--before {
  position: absolute;
  left: -2px;
  top: -2px;
  width: 42px;
  height: 42px;
  background: url(data:image/png;base64,)
    no-repeat;
  background-size: 100%;
  z-index: 0;
  animation: rotate 1s linear infinite;
}
.component-display__loading-text {
  position: absolute;
  left: 50%;
  top: 65%;
  transform: translate(-50%, -50%);
  color: #999;
  font-size: 12px;
}
