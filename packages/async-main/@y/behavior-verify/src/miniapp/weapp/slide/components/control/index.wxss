@import "/packages/async-main/@y/behavior-verify/src/miniapp/weapp/slide/components/slide-captcha/common.wxss";
.slide-popup__control {
  position: relative;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  border-radius: 4rpx;
  background: #f8f8f8;
  overflow: hidden;
}
.slide-popup__control__placeholder {
  display: block;
  box-sizing: border-box;
  height: 100%;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  border: 1px solid #e5e5e5;
  border-radius: 4rpx;
}
.slide-popup__control__placeholder .icon {
  vertical-align: middle;
  margin-right: 20rpx;
}
.slide-popup__control-mask {
  position: absolute;
  z-index: 10;
  left: 0;
  top: 0;
  box-sizing: border-box;
  height: 100%;
  border: 1px solid rgba(51, 136, 255, 0.3);
  background: rgba(51, 136, 255, 0.16);
  border-right: 0;
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
}
