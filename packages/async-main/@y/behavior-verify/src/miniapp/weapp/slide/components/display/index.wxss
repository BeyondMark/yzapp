@import "/packages/async-main/@y/behavior-verify/src/miniapp/weapp/slide/components/slide-captcha/common.wxss";
.component-display {
  position: relative;
  box-sizing: border-box;
  max-height: 316rpx;
  margin-bottom: 40rpx;
}
.component-display__loading {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #f2f2f2;
}
.component-display__loading-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -60rpx);
  background: url(data:image/png;base64,)
    no-repeat;
  background-size: 100%;
  width: 80rpx;
  height: 80rpx;
  box-shadow: 0 4rpx 16rpx rgba(200, 201, 204, 0.5);
  border-radius: 50%;
}
.component-display__loading-icon--before {
  background: url(data:image/png;base64,)
    no-repeat;
  background-size: 100%;
  width: 84rpx;
  height: 84rpx;
  position: absolute;
  left: -2rpx;
  top: -2rpx;
  z-index: 0;
  animation: rotate 1s linear infinite;
}
.van-icon-info-o {
  position: absolute;
}
.component-display__loading > text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, 40rpx);
  color: #999;
  font-size: 24rpx;
}
.component-display__ready {
  position: relative;
  height: 100%;
  overflow: hidden;
}
.component-display__refresh {
  position: absolute;
  z-index: 10;
  background: url(data:image/png;base64,)
    no-repeat;
  background-size: 100%;
  right: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.component-display__bg {
  display: block;
  width: 100%;
  height: 100%;
}
@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(1turn);
  }
}
