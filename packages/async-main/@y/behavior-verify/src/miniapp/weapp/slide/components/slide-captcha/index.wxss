@import "/packages/async-main/@y/behavior-verify/src/miniapp/weapp/slide/components/slide-captcha/common.wxss";
.slide-popup {
  width: 632rpx;
  padding: 34rpx 36rpx 48rpx;
  box-sizing: border-box;
}
.slide-popup__title {
  position: relative;
  display: block;
  margin-bottom: 40rpx;
  font-size: 40rpx;
}
.slide-popup__title__close {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}
.component-display__area {
  position: absolute;
  bottom: 0;
  right: 0;
  width: auto;
  height: auto;
}
.component-display__area-block {
  position: absolute;
  left: 0;
  height: auto;
  width: auto;
}
.component-display__area-block > image {
  display: block;
}
.slide-popup__control-movables {
  position: absolute;
  height: 100%;
  width: auto;
  top: 0;
  right: 0;
  z-index: 10;
}
.slide-popup__control-movables__block {
  position: absolute;
  top: 0;
  width: 100rpx;
  height: 100%;
  z-index: 20;
}
.slide-popup__control-movables__view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #38f;
  border-radius: 4rpx;
  text-align: center;
}
.slide-popup__control-mask {
  position: absolute;
  z-index: 10;
  left: 0;
  top: 0;
  box-sizing: border-box;
  height: 100%;
  border: 1px solid rgba(51, 136, 255, 0.3);
  background: rgba(51, 136, 255, 0.16);
  border-right: 0;
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
}
.slide-popup__control-mask--inner {
  border-left: 0 !important;
  width: 0;
}
