@import "/common/css/helper/index.wxss";
.van-sku-actions {
  display: flex;
}
.van-sku-actions__btn-wrap {
  flex: 1;
}
.van-sku-actions__btn {
  position: relative;
  flex: 1;
  padding: 0 15px;
  height: 50px;
  line-height: 50px;
  border: 0;
  border-radius: 0;
  font-size: 16px;
  color: #fff;
  background-color: #f85;
  text-align: center;
}
.van-sku-actions__btn--presale {
  background-color: #fff;
  color: #999;
}
.van-sku-actions__btn--main {
  background-color: #f44;
}
.van-sku-actions__btn--disabled {
  color: #999;
  background-color: #eee;
}
.van-sku-actions__time-wrap {
  margin-top: 10px;
}
.van-sku-actions__presale-time {
  font-size: 12px;
  line-height: 15px;
  text-align: left;
}
@media (max-width: 320px) {
  .van-sku-actions__btn--disabled,
  .van-sku-actions__btn--main {
    max-width: 120px;
  }
}
