.van-sku-actions {
  display: flex;
  padding: 8px 16px;
}
.van-sku-actions__btn-wrap {
  flex: 1;
  overflow: hidden;
}
.van-sku-actions__btn-wrap.btn-first {
  margin-left: 5px;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
}
.van-sku-actions__btn-wrap:last-child {
  margin-right: 5px;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
}
.van-sku-actions__btn {
  position: relative;
  flex: 1;
  padding: 0 15px;
  height: 40px;
  line-height: 40px;
  border: 0;
  border-radius: 0;
  font-size: 14px;
  color: #fff;
  background-color: #f85;
  text-align: center;
}
.van-sku-actions__btn--main {
  background-color: #f44;
}
