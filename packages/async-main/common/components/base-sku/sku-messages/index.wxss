.van-sku-messages {
  padding-bottom: 32px;
}
.van-sku-messages .image-cell-value {
  text-align: left;
  overflow: visible;
}
.van-sku-messages .image-cell-label {
  color: #969799;
  font-size: 12px;
  line-height: 18px;
}
.van-sku-messages .image-cell-title {
  color: #646566;
  word-wrap: break-word;
}
.sku-messages_id-card-container .sku-messages_id-card-msg {
  position: relative;
  padding: 0 16px 10px;
  line-height: 16px;
  font-size: 12px;
  color: #969799;
}
.sku-messages_id-card-container .sku-messages_id-card-msg:after {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  right: 16px;
  bottom: 0;
  left: 16px;
  border-bottom: 1px solid #ebedf0;
  transform: scaleY(0.5);
}
