.tee-image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.hotel {
  position: relative;
  overflow: hidden;
  display: -webkit-flex;
  display: flex;
  margin: 16px 12px;
  border-radius: 4px;
  background: #fff;
}
.hotel .list-img {
  padding-top: 0;
  flex: 1 1 105px;
  height: 140px;
}
.hotel .list-img .pic-img {
  position: absolute;
  display: block;
  top: 0;
  width: 105px;
  height: 140px;
  object-fit: contain;
}
.hotel .list-img-position {
  width: 100px;
  background: rgba(0, 0, 0, 0.6);
  height: 28px;
  line-height: 18px;
  color: #fff;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 5px;
  box-sizing: border-box;
  border-radius: 0 0 16px 0;
}
.hotel .list-content {
  box-sizing: border-box;
  padding: 8px 12px 12px 10px;
  height: 140px;
  width: 61%;
}
.hotel .list-content .hotel-tag {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  height: 21px;
}
.hotel .list-content .hotel-tag-item {
  vertical-align: middle;
  margin-right: 4px;
}
.hotel .list-content .address {
  display: -webkit-flex;
  display: flex;
  color: #969799;
  font-size: 12px;
  height: 16px;
  margin: 8px 0 12px;
  align-items: center;
}
.hotel .list-content .address-span {
  position: relative;
  top: -1px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-left: 4px;
}
.hotel .list-content .full {
  font-size: 18px;
}
.hotel .list-content .full,
.hotel .list-content .price {
  display: -webkit-flex;
  display: flex;
  justify-content: flex-end;
  color: #969799;
  position: absolute;
  bottom: 16px;
  right: 12px;
}
.hotel .list-content .price {
  height: 20px;
  font-size: 14px;
  align-items: baseline;
}
.hotel .list-content .price-value {
  font-weight: bolder;
  font-size: 20px;
  margin: 0 2px;
}
