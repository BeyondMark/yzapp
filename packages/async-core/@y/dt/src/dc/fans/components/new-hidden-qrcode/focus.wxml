<view style="{{containerStyle}}">
    <view class="official" style="{{cardStyle}}">
        <view class="left">
            <view class="custom" wx:if="{{isCustom}}">
                <image class="logo tee-image" lazyLoad="true" mode="aspectFill" src="{{opt.logo}}"></image>
            </view>
            <view class="default" wx:else>
                <image class="logo tee-image" lazyLoad="true" mode="aspectFill" src="{{opt.logo}}"></image>
                <image class="icon tee-image" lazyLoad="true" mode="aspectFill" src="https://img01.yzcdn.cn/upload_files/2023/07/06/FsVgTf0ZhySRJKTWmgp_drsX14m-.png"></image>
            </view>
            <view class="cnt">
                <view class="title">{{opt.title}}</view>
                <view class="desc">{{opt.desc}}</view>
            </view>
        </view>
        <view class="right">
            <view class="btn">关注</view>
        </view>
    </view>
</view>
