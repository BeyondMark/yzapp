.tee-image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.dc-weapp-live .room {
  display: -webkit-flex;
  display: flex;
  align-items: stretch;
  height: 140px;
  margin: 10px 15px;
  border-radius: 8px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  background-color: #fff;
  overflow: hidden;
}
.dc-weapp-live .room-cover {
  flex: 0 1 auto;
  width: 140px;
  height: 100%;
  object-fit: cover;
}
.dc-weapp-live .room-content {
  flex: 1;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 12px 8px;
}
.dc-weapp-live .room-name {
  line-height: 22px;
  font-size: 16px;
  font-weight: 700;
  color: #323233;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.dc-weapp-live .room-time {
  margin-top: 8px;
  line-height: 16px;
  font-size: 12px;
  color: #969799;
}
.dc-weapp-live .room-status {
  display: -webkit-inline-flex;
  display: inline-flex;
  align-items: center;
  height: 20px;
  margin-top: auto;
  padding: 0 8px;
  border-radius: 10px;
  background-color: rgba(200, 201, 204, 0.2);
  font-size: 12px;
  color: #646566;
}
.dc-weapp-live .room-status:before {
  content: "";
  width: 6px;
  height: 6px;
  margin-right: 6px;
  border-radius: 100%;
  background-color: #ed6a0c;
}
.dc-weapp-live .room-status--start:before {
  background-color: #07c160;
}
