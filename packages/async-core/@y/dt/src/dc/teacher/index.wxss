.tee-image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.dc-teacher .wrap {
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}
.dc-teacher .wrap .form-button:nth-child(odd) .item--avatarPos0 .item__link {
  flex-direction: row-reverse;
}
.dc-teacher .wrap .form-button:nth-child(odd) .item--avatarPos0 .item__img {
  margin-left: 15px;
  margin-right: 0;
}
.dc-teacher .wrap--listMode0 {
  flex-direction: row;
}
.dc-teacher .wrap--listMode0 .form-button {
  width: 50%;
}
.dc-teacher .wrap--listMode1 {
  flex-direction: row;
}
.dc-teacher .wrap--listMode1 .form-button {
  width: 33.333%;
}
.dc-teacher .wrap--listMode2 {
  flex-direction: column;
}
.dc-teacher .wrap--listMode3 {
  overflow: auto;
  flex-direction: row;
  flex-wrap: nowrap;
}
.dc-teacher .wrap--listMode3 .form-button {
  width: 30%;
}
.dc-teacher .item {
  height: 100%;
  position: relative;
  display: -webkit-flex;
  display: flex;
}
.dc-teacher .item__link {
  display: -webkit-flex;
  display: flex;
  color: inherit;
  overflow: hidden;
  background: #fff;
  box-sizing: border-box;
  flex: 1;
}
.dc-teacher .item__img {
  position: relative;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  width: 100%;
  height: 0;
  padding-bottom: 100%;
}
.dc-teacher .item__img image {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
}
.dc-teacher .item__info {
  width: 100%;
}
.dc-teacher .item__label {
  color: #333;
  line-height: 22px;
}
.dc-teacher .item__duty,
.dc-teacher .item__label {
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.dc-teacher .item__duty {
  color: #999;
  line-height: 16px;
}
.dc-teacher .item__desc {
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #666;
  line-height: 16px;
}
.dc-teacher .item--size0 .item__link {
  padding: 15px;
  flex-direction: column;
}
.dc-teacher .item--size0 .item__label {
  font-size: 16px;
  margin-top: 15px;
}
.dc-teacher .item--size0 .item__desc,
.dc-teacher .item--size0 .item__duty {
  font-size: 12px;
  margin-top: 5px;
}
.dc-teacher .item--size1 .item__link {
  padding: 10px;
  flex-direction: column;
}
.dc-teacher .item--size1 .item__label {
  font-size: 14px;
  margin-top: 15px;
  line-height: 20px;
}
.dc-teacher .item--size1 .item__desc,
.dc-teacher .item--size1 .item__duty {
  font-size: 12px;
  margin-top: 5px;
}
.dc-teacher .item--size2 .item__link {
  height: 118px;
  padding: 15px;
  justify-content: space-between;
  flex: 1;
  width: 0;
}
.dc-teacher .item--size2 .item__img {
  width: 88px;
  height: 88px;
  margin-right: 15px;
  flex-shrink: 0;
  padding-bottom: 0;
}
.dc-teacher .item--size2 .item__label {
  font-size: 16px;
}
.dc-teacher .item--size2 .item__desc,
.dc-teacher .item--size2 .item__duty {
  font-size: 12px;
}
.dc-teacher .item--size2 .item__info {
  flex: 1;
  text-align: left !important;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  width: 0;
}
.dc-teacher .item--size3 {
  position: relative;
  flex: 0 0 30%;
  min-width: 98px;
}
.dc-teacher .item--size3 .item__link {
  padding: 10px;
  flex-direction: column;
}
.dc-teacher .item--size3 .item__label {
  font-size: 14px;
  margin-top: 15px;
  line-height: 20px;
}
.dc-teacher .item--size3 .item__desc,
.dc-teacher .item--size3 .item__duty {
  font-size: 12px;
  margin-top: 5px;
}
.dc-teacher .item--avatarShape0 .item__img image {
  border-radius: 50%;
}
.dc-teacher .item--avatarShape1 .item__img image {
  border-radius: 8px;
}
.dc-teacher .item--textStyle0 .item__label {
  font-weight: 700;
}
.dc-teacher .item--textStyle1 .item__label {
  font-weight: 400;
}
.dc-teacher .item--textAlign1 .item__info {
  text-align: center;
}
.dc-teacher .item--avatarPos2 .item__link {
  flex-direction: row-reverse;
}
.dc-teacher .item--avatarPos2 .item__img {
  margin-left: 15px;
  margin-right: 0;
}
.dc-teacher .item--cardStyle1 .item__link {
  box-shadow: 0 2px 8px rgba(93, 113, 127, 0.08);
}
.dc-teacher .item--cardStyle2 .item__link {
  border: 1px solid #e6e6e6;
}
.dc-teacher .item--cardStyle3 .item__link {
  background-color: transparent;
}
.dc-teacher .item--goodsRadius0 .item__link {
  border-radius: 0;
}
.dc-teacher .item--goodsRadius1 .item__link {
  border-radius: 8px;
}
