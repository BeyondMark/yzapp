.t-text {
  text-decoration: inherit;
}
.t-text,
.tee-image {
  display: inline-block;
}
.tee-image {
  width: 100%;
  height: 100%;
}
.banner {
  margin-bottom: 10px;
}
.banner .contact-button {
  padding: 0;
  font-size: 0;
  border-radius: 0;
}
.banner .contact-button:after {
  border: none;
  border-radius: none;
}
.banner-image {
  background-color: #ecebf2;
  width: 100%;
  height: 160px;
}
.banner-image.auto {
  height: auto;
}
.banner-center {
  position: relative;
  margin: 0 auto;
  box-sizing: border-box;
  width: calc(100% - 32px);
  margin-top: -32px;
  padding: 16px;
  min-height: 88px;
  background-color: #fff;
}
.banner-center.card-type-1 {
  border: none;
}
.banner-center.card-type-2 {
  box-shadow: 0 2px 10px hsla(0, 0%, 49%, 0.16);
}
.banner-center.card-type-3 {
  border: 1px solid #ebedf0;
}
.banner-center.card-type-4 {
  background-color: transparent;
}
.banner-center.center {
  text-align: center;
}
.banner-center.banner-border-1 {
  border-radius: none;
}
.banner-center.banner-border-2 {
  border-radius: 8px;
}
.banner-mark {
  position: relative;
  text-align: center;
}
.banner-mark.right {
  position: absolute;
  right: 16px;
  margin-bottom: -16px;
}
.banner-mark__icon {
  display: inline-block;
  width: 56px;
  height: 56px;
  margin-top: -28px;
  border-radius: 4px;
  background-color: #ecebf2;
  box-shadow: 0 2px 6px 0#f2f3f5;
}
.banner-shop {
  display: -webkit-flex;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.banner-shop.center {
  justify-content: center;
}
.banner-shop.right {
  margin-right: 60px;
}
.banner-shop-title {
  font-size: 20px;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #323233;
}
.banner-shop-icon {
  flex-shrink: 0;
  margin-left: 4px;
  font-size: 20px;
  font-weight: 500;
}
.banner-address {
  display: -webkit-flex;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 8px 0;
  margin-right: 60px;
  color: #323233;
}
.banner-address.center {
  justify-content: center;
  margin-right: 0;
}
.banner-address-icon {
  flex-shrink: 0;
  margin-right: 2px;
}
.banner-address-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.banner-address,
.banner-notice {
  font-size: 12px;
}
.banner-notice {
  color: #959799;
}
.banner-ump {
  display: -webkit-flex;
  display: flex;
  padding-top: 8px;
}
