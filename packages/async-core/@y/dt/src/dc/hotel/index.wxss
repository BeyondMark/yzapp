.t-text {
  text-decoration: inherit;
}
.t-text,
.tee-image {
  display: inline-block;
}
.tee-image {
  width: 100%;
  height: 100%;
}
.dc-hotel .hotel {
  position: relative;
  display: block;
  overflow: hidden;
}
.dc-hotel .hotel-content {
  position: relative;
  padding: 8px 12px 16px;
  background-color: #fff;
}
.dc-hotel .hotel-radius {
  border-radius: 8px;
}
.dc-hotel .hotel-corner-mark {
  background: rgba(0, 0, 0, 0.6);
  height: 28px;
  line-height: 18px;
  color: #fff;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 5px;
  box-sizing: border-box;
  border-radius: 0 0 16px 0;
}
.dc-hotel .frosted-glass-image {
  position: relative;
  width: 100%;
  height: 0;
  padding-top: 56.25%;
  overflow: hidden;
}
.dc-hotel .pic-bg {
  position: absolute;
  left: -7%;
  top: -7%;
  width: 114%;
  height: 114%;
  object-fit: cover;
  filter: blur(13px);
}
.dc-hotel .pic-img {
  position: absolute;
  display: block;
  top: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.dc-hotel .frosted-glass-image-full {
  padding-top: 0;
  height: 140px;
}
.dc-hotel .title {
  position: relative;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.dc-hotel .title-tag {
  position: relative;
  top: -2px;
  display: inline-block;
  font-size: 10px;
  padding: 0 6px;
  height: 16px;
  line-height: 16px;
  margin-right: 4px;
}
.dc-hotel .title-tag-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
}
.dc-hotel .title-name {
  display: inline;
}
.dc-hotel .text-bolder {
  font-weight: bolder;
}
.dc-hotel .hotel-tag {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  height: 21px;
  margin-bottom: 8px;
}
.dc-hotel .hotel-tag-item {
  vertical-align: middle;
  margin-right: 4px;
}
.dc-hotel .hotel-tag-item-last {
  vertical-align: middle;
}
.dc-hotel .room-type-tag {
  font-size: 12px;
  line-height: 16px;
  color: #969799;
  height: 18px;
  -webkit-line-clamp: 1;
}
.dc-hotel .desc,
.dc-hotel .room-type-tag {
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.dc-hotel .desc {
  font-size: 13px;
  line-height: 17px;
  color: #646566;
  -webkit-line-clamp: 2;
}
.dc-hotel .desc-ellipsis-one {
  -webkit-line-clamp: 1;
}
.dc-hotel .address {
  display: -webkit-flex;
  display: flex;
  color: #969799;
  font-size: 12px;
  height: 16px;
  margin: 0 0 12px;
  align-items: center;
}
.dc-hotel .address-span {
  position: relative;
  top: -1px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-left: 4px;
}
.dc-hotel .price {
  display: -webkit-flex;
  display: flex;
  flex-grow: 1;
  justify-content: flex-end;
  height: 20px;
  font-size: 14px;
  align-items: flex-end;
  color: #969799;
}
.dc-hotel .price-value {
  font-weight: bolder;
  font-size: 20px;
  margin: 0 2px;
}
.dc-hotel .hotel-shadow {
  box-shadow: 0 2px 8px rgba(93, 113, 127, 0.08);
}
.dc-hotel .hotel-border {
  border: 1px solid rgba(50, 50, 51, 0.1);
}
.dc-hotel .hotel-simple {
  background-color: inherit;
}
.dc-hotel .hotel-list {
  display: -webkit-flex;
  display: flex;
}
.dc-hotel .list-img {
  padding-top: 0;
  flex: 0 1 105px;
  height: 140px;
}
.dc-hotel .list-content {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  flex: 1;
  padding: 8px 12px 12px 10px;
  height: 140px;
  background-color: #fff;
}
.dc-hotel .hotel-item-wrap {
  display: -webkit-flex;
  display: flex;
  flex-flow: row nowrap;
  white-space: nowrap;
  overflow: auto;
  width: 100%;
}
.dc-hotel .hotel-content-tag {
  overflow: hidden;
}
.dc-hotel .hotel-swipe {
  width: 140px;
  white-space: normal;
  flex: 0 0 140px;
}
.dc-hotel .swipe-img {
  width: 140px;
  height: 140px;
  padding-top: 0;
}
.dc-hotel .swipe-content {
  box-sizing: border-box;
  position: relative;
  padding: 8px 12px 16px;
  background-color: #fff;
}
.dc-hotel .swipe-content-title {
  -webkit-line-clamp: 2;
  word-break: break-all;
}
.dc-hotel .swipe-content-price {
  position: absolute;
  bottom: 16px;
}
.dc-hotel .hotel-item-hybrid {
  display: -webkit-flex;
  display: flex;
  overflow: hidden;
  flex-wrap: wrap;
}
.dc-hotel .hotel-hybrid:nth-child(3n),
.dc-hotel .hotel-hybrid:nth-child(3n + 2) {
  flex: 0 0 50%;
  box-sizing: border-box;
}
.dc-hotel .hotel-hybrid:nth-child(3n + 1) {
  flex: auto;
  width: 100%;
}
.dc-hotel .hybrid-img {
  height: 80px;
}
.dc-hotel .hybrid-img:nth-child(3n + 1) .hybrid-img {
  position: relative;
  width: 100%;
  height: 0;
  padding-top: 56.25%;
  overflow: hidden;
}
.dc-hotel .hybrid-content {
  max-height: 152px;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  padding: 8px 12px 16px;
}
