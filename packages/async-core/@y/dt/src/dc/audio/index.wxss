.t-text {
  text-decoration: inherit;
}
.t-text,
.tee-image {
  display: inline-block;
}
.tee-image {
  width: 100%;
  height: 100%;
}
.dc-audio {
  padding: 15px;
}
.dc-audio .wx {
  position: relative;
  min-height: 40px;
}
.dc-audio .logo {
  width: 40px;
  height: 40px;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
}
.dc-audio .animation {
  position: absolute;
  left: 21px;
  top: 12px;
  width: 13px;
  height: 17px;
  z-index: 2;
}
.dc-audio .animation-static,
.dc-audio .bar {
  background: url(https://img01.yzcdn.cn/v2/image/wap/audio/sprite_v5.png)
    no-repeat scroll 0 0;
  background-size: 400px 175px;
}
.dc-audio .animation-static {
  background-position: -180px -105px;
  width: 13px;
  height: 17px;
  display: block;
  position: absolute;
  left: 21px;
  top: 12px;
  z-index: 1;
}
.dc-audio .bar {
  width: 185px;
  height: 42px;
  display: inline-block;
  position: absolute;
  left: 50px;
}
.dc-audio .time {
  color: #999;
  font-size: 14px;
  position: absolute;
  left: 240px;
  bottom: 5px;
}
.dc-audio .right .logo {
  float: right;
}
.dc-audio .right .animation-static {
  background-position: -180px -83px;
  right: 21px;
  left: auto;
}
.dc-audio .right .bar {
  background-position: -187px 0;
  left: auto;
  right: 50px;
}
.dc-audio .right .bar .animation {
  right: 21px;
  left: auto;
}
.dc-audio .right .time {
  left: auto;
  right: 240px;
}
.dc-audio .sp {
  position: relative;
  padding: 0 15px 0 50px;
  height: 46px;
  background-color: #fff;
}
.dc-audio .sp-btn {
  width: 25px;
  height: 25px;
  background-size: contain;
  background-position: 100%;
  background-repeat: no-repeat;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.dc-audio .sp-title-wrapper {
  height: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.dc-audio .sp-title {
  vertical-align: middle;
  display: inline-block;
  font-size: 14px;
  color: #111;
  line-height: 46px;
}
.dc-audio .sp-box {
  position: absolute;
  width: 50px;
  height: 46px;
  left: 0;
}
.dc-audio .sp-o {
  width: 25px;
  height: 25px;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
}
.dc-audio .music {
  position: relative;
  padding: 0 15px 0 70px;
  width: 100%;
  height: 74px;
  border: 1px solid #e5e5e5;
  background-color: #fff;
  box-sizing: border-box;
}
.dc-audio .mc-btn {
  position: absolute;
  left: 15px;
  top: 17px;
  font-size: 40px;
  color: #4b0;
}
.dc-audio .mc-title {
  padding-right: 15px;
  height: 38px;
  line-height: 38px;
  font-size: 14px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.dc-audio .mc-duration,
.dc-audio .mc-time {
  position: absolute;
  bottom: 0;
  line-height: 34px;
  font-size: 12px;
}
.dc-audio .mc-time {
  left: 70px;
  right: auto;
}
.dc-audio .mc-duration {
  left: auto;
  right: 15px;
  color: #999;
}
.dc-audio .van-slider__button {
  width: 14px;
  height: 14px;
  border: 1px solid #e5e5e5;
  box-shadow: none;
  border-radius: 50%;
  background-color: #fff;
}
.dc-audio .van-slider__button:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 4px;
  height: 4px;
  border-radius: 4px;
  background: #4b0;
}
