.t-text {
  display: inline-block;
  text-decoration: inherit;
}
.edu_trial {
  padding: 12px;
  background: #fff;
  box-sizing: border-box;
  overflow: hidden;
}
.edu_trial__title-wrapper {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}
.edu_trial__title {
  font-size: 16px;
  color: #323233;
  line-height: 22px;
}
.edu_trial__content-wrapper {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.edu_trial__content-list {
  flex: 1;
  overflow: hidden;
}
.edu_trial__content-item {
  display: -webkit-flex;
  display: flex;
  margin-top: 10px;
  flex: 1;
  margin-right: 16px;
}
.edu_trial__content-item:first-child {
  margin-top: 0;
}
.edu_trial__content-tag {
  display: inline-block;
  background: #f9f9f9;
  border-radius: 4px;
  box-sizing: border-box;
  line-height: 18px;
  padding: 0 2px;
  height: 18px;
  flex-shrink: 0;
  min-width: 52px;
  text-align: center;
}
.edu_trial__tag-text {
  font-size: 12px;
  transform: scale(0.8333333);
  line-height: 18px;
  display: block;
}
.edu_trial__content-detail-list {
  box-sizing: border-box;
  padding-left: 8px;
}
.edu_trial__content-detail-item,
.edu_trial__content-detail-list {
  flex: 1;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.edu_trial__content-detail-item {
  display: block;
  font-size: 12px;
  color: #323233;
  line-height: 20px;
}
.edu_trial__trial-btn {
  width: 70px;
  height: 24px;
  border-radius: 24px;
  text-align: center;
  flex-shrink: 0;
  overflow: hidden;
}
.edu_trial__trial-btn-text {
  font-size: 12px;
  letter-spacing: 0;
  line-height: 24px;
}
