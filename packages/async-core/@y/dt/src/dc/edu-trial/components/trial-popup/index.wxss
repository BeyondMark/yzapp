.tee-image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.trial-popup__title {
  text-align: left;
  padding-left: 14px;
  line-height: 44px;
  font-size: 16px;
  font-weight: 500;
  color: #323233;
}
.trial-popup__content {
  padding: 0 14px;
}
.trial-popup__gift {
  padding: 16px 12px;
  border-radius: 4px;
}
.trial-popup__gift-item {
  display: -webkit-flex;
  display: flex;
  margin-top: 25px;
}
.trial-popup__img-icon {
  width: 12px;
  height: 12px;
}
.trial-popup__gift-item:first-child {
  margin-top: 0;
}
.trial-popup__gift-item-icon {
  width: 20px;
  height: 20px;
  border-radius: 20px;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
}
.trial-popup__gift-item-detail {
  margin-left: 8px;
}
.trial-popup__gift-item-title {
  font-weight: 700;
  font-size: 16px;
  color: #323233;
  line-height: 22px;
}
.trial-popup__gift-item-content {
  font-size: 14px;
  color: #646566;
  line-height: 20px;
  margin-top: 4px;
}
.trial-popup__collect {
  margin-top: 27px;
}
.trial-popup__collect-text {
  font-size: 12px;
  color: #646566;
  letter-spacing: 0;
  padding-left: 3px;
}
.trial-popup__input-item {
  margin-top: 12px;
  margin-left: 2px;
}
.trial-popup__send-code {
  font-size: 14px;
  letter-spacing: 0;
}
.trial-popup__promise-list {
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  margin-top: 12px;
  padding-left: 3px;
}
.trial-popup__promise-item {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  margin-left: 8px;
  margin-bottom: 8px;
}
.trial-popup__promise-item-icon {
  line-height: 12px;
}
.trial-popup__promise-item:first-child {
  margin-left: 0;
}
.trial-popup__promise-item-text {
  margin-left: 4px;
  font-size: 12px;
  color: #656565;
  line-height: 16px;
}
.trial-popup__trail-btn {
  border-radius: 40px;
  height: 40px;
  width: 100%;
  color: #fff;
  text-align: center;
  line-height: 40px;
  font-size: 14px;
  letter-spacing: 0;
  margin-bottom: 13px;
}
