.t-text {
  text-decoration: inherit;
}
.t-text,
.tee-image {
  display: inline-block;
}
.tee-image {
  width: 100%;
  height: 100%;
}
.cap-paidcontent-item {
  position: relative;
  padding: 15px;
  overflow: hidden;
  background: #fff;
  display: block;
}
.cap-paidcontent-item .row {
  display: -webkit-flex;
  display: flex;
}
.cap-paidcontent-item .col {
  flex: 1 1 auto;
  max-width: 100%;
  overflow: hidden;
}
.cap-paidcontent-item .col:last-child {
  flex: 0 0 auto;
}
.cap-paidcontent-item .col:first-child {
  flex: 1 1 auto;
}
.cap-paidcontent-item .thumbnail {
  display: block;
  border-radius: 3px;
}
.cap-paidcontent-item .thumbnail-wrapper {
  float: left;
  position: relative;
}
.cap-paidcontent-item .thumbnail-icon {
  position: absolute;
  right: 5px;
  bottom: 5px;
}
.cap-paidcontent-item .thumbnail-icon-image {
  display: block;
  width: 20px;
  height: 20px;
}
.cap-paidcontent-item .status-tag {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  color: #fff;
  font-size: 10px;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.4);
}
.cap-paidcontent-item .detail {
  position: relative;
  padding-left: 10px;
  overflow: hidden;
}
.cap-paidcontent-item .detail__footer {
  position: absolute;
  bottom: 0;
  width: calc(100% - 10px);
}
.cap-paidcontent-item .title {
  flex: 1 1 auto;
  display: inline-block;
  line-height: 18px;
  vertical-align: middle;
  color: #333;
  font-size: 14px;
  font-weight: 700;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cap-paidcontent-item .title--multi {
  white-space: normal;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cap-paidcontent-item .title-bar {
  display: -webkit-flex;
  display: flex;
  line-height: 0;
}
.cap-paidcontent-item .title-tag {
  flex: 0 0 auto;
  margin: 2px 4px 0 0;
  padding: 0 3px !important;
  height: 14px;
  font-size: 10px;
  min-width: 31px;
  text-align: center;
  justify-content: center;
  white-space: nowrap;
}
.cap-paidcontent-item .subtitle {
  margin-top: 1px;
  line-height: 12px;
  color: #999;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cap-paidcontent-item .subtitle--notag {
  margin-top: 8px;
}
.cap-paidcontent-item .status {
  display: inline-block;
  padding: 0 8px;
  line-height: 12px;
  vertical-align: middle;
  color: #999;
  font-size: 12px;
  border-right: 1px solid #e5e5e5;
}
.cap-paidcontent-item .status-list {
  line-height: 0;
  align-self: flex-end;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cap-paidcontent-item .status:first-child {
  padding-left: 0;
}
.cap-paidcontent-item .status:last-child {
  border-right: none;
}
.cap-paidcontent-item .corner-top {
  line-height: 0;
  text-align: right;
}
.cap-paidcontent-item .corner-top-text {
  line-height: 14px;
  text-align: right;
  color: #f44;
  font-size: 14px;
}
.cap-paidcontent-item .top-tag {
  line-height: 1.2 !important;
  margin-top: 5px;
  padding: 2px 3px !important;
}
.cap-paidcontent-item .tag {
  line-height: 14px;
  font-size: 10px;
}
.cap-paidcontent-item .corner-bottom {
  line-height: 0;
}
.cap-paidcontent-item .corner-bottom-text {
  line-height: 12px;
  text-align: right;
  color: #999;
  font-size: 12px;
}
.cap-paidcontent-item .bottom-tag {
  line-height: 1.1 !important;
  white-space: nowrap;
  margin-bottom: 2px;
  padding: 2px 3px !important;
}
.cap-paidcontent-item .info-status-list {
  position: absolute;
  bottom: 0;
  line-height: 12px;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
  font-size: 12px;
}
.cap-paidcontent-item .info {
  flex: 1 1 auto;
  overflow: hidden;
}
.cap-paidcontent-item .info-title {
  width: 100%;
  overflow: hidden;
  line-height: 14px;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
  font-size: 14px;
  font-weight: 700;
}
.cap-paidcontent-item .labels {
  position: relative;
  flex: 0 0 auto;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cap-paidcontent-item .label {
  position: absolute;
  bottom: 0;
  right: 0;
  white-space: nowrap;
}
.cap-paidcontent-item .label-top {
  align-self: flex-end;
  top: 15px;
  right: 15px;
}
.cap-paidcontent-item .flex-container {
  display: -webkit-flex;
  display: flex;
}
.cap-paidcontent-item .course-type-name {
  position: absolute;
  left: 8px;
  bottom: 8px;
  z-index: 1;
  padding: 0 6px;
  line-height: 18px;
  border-radius: 9px;
  display: inline-block;
  box-sizing: border-box;
  vertical-align: top;
  margin-right: 3px;
  font-size: 12px;
  color: #fff;
  background-color: #f44;
}
.title-tag.zan-tag.zan-tag--danger {
  background-color: #f44 !important;
}
.title-tag.zan-tag.zan-tag--danger:after {
  border-color: #f44 !important;
}
