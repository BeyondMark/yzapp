.tee-image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.level-info__popup {
  width: 320px;
  background: transparent;
  border-radius: 8px;
}
.level-info__popup-close {
  position: absolute;
  right: 5px;
  top: 7px;
  padding: 10px;
  height: 20px;
  width: 20px;
  border-radius: 50%;
}
.level-info__popup-close:after,
.level-info__popup-close:before {
  content: "";
  width: 15px;
  height: 2px;
  background: #c8c9cc;
  position: absolute;
  left: 50%;
  top: 50%;
}
.level-info__popup-close:after {
  transform: translateX(-50%) translateY(-50%) rotate(45deg);
}
.level-info__popup-close:before {
  transform: translateX(-50%) translateY(-50%) rotate(-45deg);
}
.level-info__popup-logo {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  font-size: 14px;
}
.level-info__popup-shop {
  display: inline-block;
  margin-left: 10px;
  font-size: 14px;
  vertical-align: top;
  line-height: 26px;
}
.level-info__popup-title {
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 8rpx;
}
.level-info__popup-level {
  font-size: 12px;
  color: #faab0c;
  text-align: center;
}
.level-info__popup-qrcode {
  width: 150px;
  height: 150px;
}
.level-info__popup-barcode {
  width: 230px;
  height: 70px;
}
.level-info__popup-header {
  border-radius: 8px 8px 0 0;
  height: 70px;
  padding: 15px 20px 10px 20px;
  color: #333;
  background-color: #f7f8fa;
}
.level-info__popup-body,
.level-info__popup-header {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.level-info__popup-body {
  background: #fff;
  border-radius: 0 0 8px 8px;
  padding: 32px 0 24px;
  box-sizing: border-box;
  min-height: 339px;
}
.level-info__popup-body.noButton {
  padding: 32px 0;
  min-height: 347px;
}
.level-info__popup-code {
  font-size: 12px;
  margin: 8px 0 16px;
}
.level-info__popup-tips {
  font-size: 12px;
  color: #999;
  margin-top: 7px;
}
.level-info__popup-wechat {
  margin: 0 24px 24px;
}
