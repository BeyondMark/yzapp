.t-text {
  display: inline-block;
  text-decoration: inherit;
}
.coupon-container {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fdf2e4;
}
.coupon-container .coupon-bg {
  background-image: url(https://img01.yzcdn.cn/upload_files/2022/04/08/Fgb-rEEXF0kmub5DYNyv6gFRyvIK.jpeg);
  background-size: 100%;
  width: 136px;
  height: 165px;
  padding-top: 30px;
  position: relative;
  box-sizing: border-box;
}
.coupon-container .coupon-bg .coupon-title {
  width: 50px;
  height: 16px;
  font-size: 12px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  background-image: linear-gradient(180deg, #f5ad3e, #ee5e2b);
  color: #fbe7bb;
  position: absolute;
  top: 4px;
  left: 33%;
}
.coupon-container .coupon-bg .coupon-title,
.coupon-container .coupon-bg .price-box {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
}
.coupon-container .coupon-bg .price-box {
  font-size: 50px;
  position: relative;
  color: #e8512e;
  min-width: 66px;
  width: -webkit-fit-content;
  width: fit-content;
  margin: 0 auto;
  font-weight: 700;
}
.coupon-container .coupon-bg .price-box .price-content {
  color: #ee703e;
}
.coupon-container .coupon-bg .price-box .unit {
  position: absolute;
  right: -12px;
  bottom: -10px;
  font-size: 14px;
  height: 24px;
  border-radius: 14px;
  line-height: 12px;
  background-image: linear-gradient(180deg, #f5a258, #e64528);
  color: #ffd4ad;
  border: 1px solid #fce1a0;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 4px;
  box-sizing: border-box;
}
.coupon-container .coupon-bg .small-font {
  font-size: 36px;
  bottom: -10px;
}
.coupon-container .coupon-bg .smaller-font {
  font-size: 22px;
  bottom: -20px;
}
.coupon-container .coupon-bg .smaller-font .unit {
  top: 16px;
}
.coupon-container .coupon-bg .desc-box {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  font-size: 24px;
  align-items: center;
  justify-content: space-between;
  height: 60px;
  padding: 3px 0;
  color: #e8512e;
  font-weight: 700;
}
.coupon-container .coupon-bg .desc-box .desc-text {
  color: #ee703e;
}
.coupon-container .coupon-bg .coupon-desc {
  color: #e64528;
  font-size: 12px;
  position: absolute;
  bottom: 30px;
  padding: 0 20px;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
}
