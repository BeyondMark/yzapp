.t-text {
  display: inline-block;
  text-decoration: inherit;
}
.container {
  margin: 0 auto;
  padding: 12px;
  padding-bottom: 18px;
  background: url(https://img01.yzcdn.cn/upload_files/2022/11/17/FrCs10iC157mKzadUSjROnx79usI.png)
    no-repeat #fff;
  background-size: cover;
  background-position: bottom;
  box-sizing: border-box;
  border-radius: 16px;
  width: 270px;
  min-height: 196px;
}
.head {
  text-align: right;
}
.title {
  font-size: 22px;
  font-weight: 600;
  color: #333;
}
.subtitle,
.title {
  text-align: center;
}
.subtitle {
  margin-top: 8px;
  font-size: 14px;
  color: #666;
}
.highlight {
  color: #a8884c;
  font-weight: 600;
}
.action {
  padding: 10px 0;
  max-width: 80%;
  text-align: center;
  border-radius: 40px;
  background-color: #333;
  color: #fff;
  font-weight: 600;
  font-size: 16px;
  margin: auto;
  margin-top: 24px;
}
