.bg-item {
  top: 0;
  left: 0;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background-color: transparent;
  background-repeat: no-repeat;
  background-position: 50%;
  background-size: cover;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.16);
  transition: all 0.24s;
  overflow: visible;
  z-index: 1;
}
.bg-item,
.share-block-bg {
  position: absolute;
}
.sub-item-warp .item {
  position: absolute;
  top: 0;
  left: 0;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background-color: transparent;
  background-repeat: no-repeat;
  background-position: 50%;
  background-size: cover;
  transition: all 0.24s;
  overflow: visible;
  z-index: 2;
}
.sub-item-warp .item:after {
  display: none;
}
.sub-item-warp .tag {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40px;
  border-radius: 8px;
  background-color: #ff4240;
  color: #fff;
  font-size: 10px;
  line-height: 16px;
  text-align: center;
}
.sub-item-warp .independent {
  opacity: 1;
  visibility: visible;
}
.sub-item-warp .independent.line-only-independent {
  margin-top: 58px;
}
.sub-item-warp .has-badge:before {
  content: "";
  box-sizing: border-box;
  position: absolute;
  top: 10px;
  right: 10px;
  width: 8px;
  height: 8px;
  border: 1px solid #fff;
  border-radius: 50%;
  background-color: #f44;
}
.sub-item-warp .goods-showcase-icon {
  background-color: transparent !important;
  box-shadow: none !important;
}
