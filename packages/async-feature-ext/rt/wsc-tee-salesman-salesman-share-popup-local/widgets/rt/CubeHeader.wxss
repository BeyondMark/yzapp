.t-text {
  display: inline-block;
  text-decoration: inherit;
}
.cube-header {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.cube-header__title {
  padding: 16px 0 8px;
  text-align: center;
}
.panel-title {
  font-size: 14px;
  line-height: 20px;
  color: #323233;
}
.panel-title__money {
  color: #ed7a0c;
  font-weight: bolder;
}
.panel-desc {
  font-size: 12px;
  line-height: 16px;
  margin: 4px 0;
  color: #969799;
}
.panel-close {
  position: absolute !important;
  top: 16px;
  right: 16px;
  font-size: 22px !important;
  color: #999;
  z-index: 1000;
}
