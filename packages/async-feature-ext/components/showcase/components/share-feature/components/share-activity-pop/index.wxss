.share-activity-pop {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  border-radius: 20px 20px 0 0;
  font-size: 16px;
  color: #323;
}
.share-activity-pop__header {
  padding: 11px 0;
  font-weight: 700;
  text-align: center;
}
.share-activity-pop__main {
  padding: 24px 30px;
  text-align: center;
  line-height: 22px;
}
.share-activity-pop__btn {
  width: 91.5vw;
  height: 40px;
  line-height: 40px;
  margin: 6px auto;
  font-size: 14px;
  border-radius: 40px;
  color: #fff;
}
.share-activity-pop__bottom {
  padding: 12px 0 16px;
  font-size: 14px;
  text-align: center;
  color: #7d7e80;
}
