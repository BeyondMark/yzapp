.account-captcha__inputs {
  overflow: hidden;
}
.account-captcha__inputs .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  margin-left: -16px;
  border-bottom: 1px solid #d8d8d8;
}
.account-captcha__inputs .row .row-input {
  flex: 1;
}
.account-captcha__inputs .row .captcha {
  font-size: 14px;
  color: #323233;
}
.account-captcha__inputs .row .captcha--disable {
  color: #777;
}
