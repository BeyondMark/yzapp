.level-wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 19px 16px 16px;
  color: #fff;
  box-sizing: border-box;
  border-radius: 12px;
  cursor: pointer;
  position: relative;
  background-size: cover;
  margin-right: 16px;
}
.level-wrap .level-name-wrap {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.level-wrap .level-name-wrap .level-name {
  font-size: 20px;
  line-height: 28px;
}
.level-wrap .level-name-wrap .expiry {
  margin-top: 4px;
  font-size: 11px;
  font-weight: 400;
  line-height: 15px;
  color: hsla(0, 0%, 100%, 0.7);
}
.right-wrap {
  position: absolute;
  align-items: center;
  width: 56px;
  height: 16px;
  top: -19px;
  right: -16px;
  border-radius: 0 12px 0 12px;
  font-size: 11px;
  font-weight: 400;
  line-height: 14px;
  background: rgba(0, 0, 0, 0.3);
  text-align: center;
}
.bot-right-wrap {
  flex-direction: row-reverse;
  bottom: -25px;
  right: -8px;
}
.bot-right-wrap,
.level-top {
  display: flex;
  position: relative;
}
.level-top {
  font-size: 18px;
  font-weight: 700;
  flex: 1;
  height: 26px;
  justify-content: space-between;
}
.level-top .trial {
  display: inline-block;
  background: hsla(0, 0%, 100%, 0.2);
  font-size: 11px;
  color: #fff;
  text-align: center;
  line-height: 12px;
  padding: 3px 4px;
  margin-left: 4px;
  border-radius: 3px;
}
.level-top .level-btn {
  position: absolute;
  right: 0;
  top: 0;
  color: #252525;
  font-weight: 700;
  background-color: #fff;
  flex: 1;
  height: 30px;
  text-align: center;
  font-size: 12px;
  line-height: 30px;
  border-radius: 999px;
}
.level-top .level-btn:after {
  border: none;
}
.level-top .level-btn .van-button--defaul {
  border: 0;
}
.level-top .level-btn .van-button__text {
  color: #323233;
  font-size: 14px;
  font-weight: 450;
}
.level-top .level-btn-default {
  mix-blend-mode: screen;
}
.level-middle {
  height: 50px;
  margin-bottom: 13px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  z-index: 1;
}
.level-middle .level-gift {
  margin-bottom: 10px;
  font-weight: 700;
  display: flex;
  align-items: flex-end;
}
.level-middle .level-gift .level-num {
  font-size: 26px;
  padding-right: 4px;
}
.level-middle .level-gift span {
  font-size: 12px;
  margin-top: -10px;
}
.vaild-time {
  margin-top: 5px;
  font-size: 12px;
  font-weight: 400;
}
.level-bottom {
  font-size: 11px;
}
.level-bottom .card-level-container {
  position: absolute;
  right: 16px;
  bottom: 12px;
}
.level-bottom .card-level-container .card-level-container-logo {
  width: 80px;
  height: 80px;
}
.level-bottom .points-info {
  text-align: start;
}
.card-code {
  margin-top: 13.5px;
}
.card-code .QR {
  background: url(//img01.yzcdn.cn/public_files/2019/02/21/e0a192cee152c41f4a6efe05da1ebef7.png)
    50%no-repeat;
  background-size: 100% 100%;
}
.card-code .icon {
  width: 24px;
  height: 24px;
  display: inline-block;
  vertical-align: top;
}
.bigger {
  font-weight: 500;
  font-size: 22px;
  line-height: 22px;
  margin-right: 4px;
}
.need {
  font-size: 12px;
  color: #fff;
  line-height: 18px;
  text-align: left;
}
.need .big {
  font-weight: 700;
  font-size: 14px;
  line-height: 20px;
}
.need .bigger {
  font-weight: 700;
  font-size: 26px;
  line-height: 32px;
}
