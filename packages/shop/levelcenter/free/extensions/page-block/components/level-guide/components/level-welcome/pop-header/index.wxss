.title {
  font-weight: 700;
  font-size: 20px;
  color: #323232;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.title .name {
  max-width: 150px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-right: 5px;
}
.sub-title {
  margin: 6px 21px 18px;
  color: #969799;
  font-size: 12px;
}
.sub-title .highlight {
  margin: 0 0.2em;
  color: #d37721;
}
.mission-list {
  text-align: left;
  margin: 0 16px 0 11px;
}
