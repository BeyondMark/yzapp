.mobile-check-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 12;
  padding: 7px 16px;
  font-weight: 700;
  background-color: #fff;
  box-shadow: 0-2px 10px 0 rgba(150, 151, 153, 0.12);
  padding-bottom: 7px;
  padding-bottom: calc(7px + constant(safe-area-inset-bottom));
  padding-bottom: calc(7px + env(safe-area-inset-bottom));
}
.button-wrapper {
  display: flex;
}
.btn-bottom {
  padding-bottom: 55px;
}
.promot-info {
  width: 100%;
  height: 44px;
  font-size: 16px;
  background-color: #e7c5a5;
  border-radius: 20px;
  text-align: center;
  line-height: 44px;
}
.promot-info .experience-price {
  color: #504439;
}
