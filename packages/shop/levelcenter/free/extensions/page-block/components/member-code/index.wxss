.avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  margin-right: 12px;
  vertical-align: middle;
}
.gc-title-wrap {
  background-size: cover;
  background-color: #fafcff;
}
.gc-title-wrap .gc-card-title {
  position: relative;
  padding: 14px 20px;
  display: flex;
  align-items: center;
}
.gc-title-wrap .gc-card-title .gc-detail {
  height: 48px;
  display: flex;
  flex-direction: column;
}
.gc-title-wrap .gc-card-title .gc-detail .gc-nickname {
  font-size: 14px;
  line-height: 22px;
  color: #323233;
  font-weight: 700;
}
.gc-title-wrap .gc-card-title .gc-detail .gc-level {
  margin-top: 6px;
}
.gc-content-wrap {
  position: relative;
  background-color: #fff;
  width: 100%;
  padding: 24px 0 24px;
}
.gc-content-wrap .qrcode-img-bot {
  margin: 0 20px;
  height: 60px;
  background-size: 100% 100%;
}
.gc-content-wrap .qrcode-card {
  font-size: 12px;
  text-align: center;
  margin: 8px 0 16px;
  color: #969799;
}
.gc-content-wrap .qrcode-img {
  margin: 0 auto;
  width: 160px;
  height: 160px;
  background-size: 100% 100%;
}
.member-code-expired {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: hsla(0, 0%, 100%, 0.96);
}
.member-code-expired .recall-btn {
  width: 116px;
  margin-top: 16px;
}
.code-dialog {
  color: #333;
  text-align: center;
}
.code-dialog .content {
  width: 610rpx;
  margin: 0 auto 24px;
  background: #fff;
  border-radius: 16px;
  box-sizing: border-box;
  overflow: hidden;
}
.code-dialog .content .code-loading {
  height: 160px;
  text-align: center;
}
.code-dialog .content .code-loading .van-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -45px 0 0-15px;
}
.code-dialog .van-dialog__header {
  height: 80px;
  line-height: 80px;
  font-size: 14px;
  font-weight: 700;
  background-color: #fafcff;
  margin-bottom: 24px;
}
.code-dialog .qrcode {
  width: 320rpx;
  height: 320rpx;
}
.code-dialog .barcode {
  width: 560rpx;
  height: 170rpx;
  text-align: center;
}
.code-dialog .bar-number {
  margin: 8px 0 16px;
  height: 17px;
  line-height: 17px;
  font-size: 12px;
  color: #999;
}
.code-dialog .dialog-close {
  color: #979797;
  font-size: 32px;
}
.member-code__tips {
  font-size: 12px;
  color: #999;
  margin-top: 7px;
}
