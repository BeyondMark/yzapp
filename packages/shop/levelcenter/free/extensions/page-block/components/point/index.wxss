.point-box {
  display: flex;
  align-items: center;
  height: 68px;
  border-radius: 4px;
  background: #fcfaf7;
  border: 0.5px solid #ece3d0;
  flex-direction: row;
  position: relative;
  margin-bottom: 8px;
}
.point-box .left-part {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 4px 0 4px 4px;
  margin-right: 8px;
}
.point-box .left-part .img {
  width: 60px;
  height: 60px;
  border-radius: 4px;
}
.point-box .center-part {
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #323233;
  font-size: 14px;
  font-weight: 400;
}
.point-box .right-part {
  height: 55px;
  width: 36px;
  justify-content: center;
  background: url(//img01.yzcdn.cn/upload_files/2023/09/21/FmeMjVLdnaLnexgnnTRTXYvJJ991.png)
    no-repeat;
  background-size: 100%;
  position: absolute;
  right: 0;
  top: 0;
}
.point-box .right-part .status {
  color: #fff;
  transform: rotate(15deg);
  font-size: 12px;
  font-weight: 400;
  line-height: 26px;
  text-align: center;
  margin-left: 4px;
}
