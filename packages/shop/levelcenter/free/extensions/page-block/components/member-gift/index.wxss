.benefit-gift {
  border-radius: var(--border-radius, 0);
  background-image: var(--bg-image, #fff);
  background-repeat: no-repeat;
  background-size: auto 90px;
  background-position: 0 0;
  background-color: #fff;
  padding: 16px 0;
  margin-bottom: 12px;
}
.benefit-gift .title {
  font-size: 16px;
  padding: 0 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 16px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.benefit-gift .title .close {
  color: #dcdee0;
}
.benefit-gift .scroll-list {
  padding: 0 12px;
  max-height: 300px;
  overflow: scroll;
}
.benefit-gift .bottom-tip {
  font-size: 12px;
  color: #969799;
  height: 40px;
}
.benefit-gift .bottom-btn,
.benefit-gift .bottom-tip {
  display: flex;
  align-items: center;
  justify-content: center;
}
.benefit-gift .bottom-btn {
  width: 143px;
  height: 32px;
  border-radius: 16px;
  border: 1px solid #c09753;
  color: #c09753;
  font-size: 14px;
  margin: 16px auto 0;
}
