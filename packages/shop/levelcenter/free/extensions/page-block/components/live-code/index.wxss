.live-code {
  height: 72px;
  display: flex;
  align-items: center;
  position: relative;
  border-radius: var(--border-radius, 0);
  background-color: #fff;
}
.live-code .code-img {
  width: 40px;
  height: 40px;
  position: absolute;
  margin-left: 14px;
}
.live-code .code-img image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.live-code .code-name-remark {
  width: 216px;
  position: absolute;
  left: 48px;
  margin-left: 12px;
}
.live-code .code-name-remark .name {
  font-size: 14px;
  font-weight: 500;
  line-height: 20px;
  margin-bottom: 4px;
}
.live-code .code-name-remark .remark {
  font-size: 12px;
  color: #7d7e80;
  line-height: 16px;
}
.live-code .code-join-group {
  width: 60px;
  height: 24px;
  position: absolute;
  right: 12px;
  background-color: #e7c5a5;
  border-radius: 13px;
  margin-left: 48%;
  text-align: center;
  font-size: 12px;
  font-weight: 400;
  line-height: 24px;
  color: #463c32;
}
.split-border {
  width: 100%;
  height: 12px;
  background-color: #f7f8fa;
}
