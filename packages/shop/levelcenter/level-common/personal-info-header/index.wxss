.info-authorize {
  display: flex;
  align-items: center;
  background-color: #252525;
}
.info-authorize .info-promot {
  margin-left: 12px;
  color: #fff;
}
.info-header {
  display: flex;
  padding: 12px 0 6px 18px;
  align-items: center;
}
.info-header,
.info-header .van-cell {
  background-color: #252525;
}
.info-header .value-link {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #969799;
  justify-content: flex-end;
  margin-right: 16px;
  font-weight: 400;
}
.info-header .van-icon {
  font-size: 12px;
  color: #969799;
}
.info-header .person_title {
  color: #fff;
  font-weight: 700;
  font-size: 17px;
  line-height: 21px;
  justify-content: space-between;
}
.info-header .person_desc,
.info-header .person_name,
.info-header .person_title {
  display: flex;
  align-items: center;
}
.info-header .person_desc {
  font-size: 13px;
  color: #969799;
  width: 200px;
  line-height: 16px;
  margin-top: 4px;
}
.info-header .level-icon {
  background: #969799;
  width: 43px;
  line-height: 12px;
  color: #000;
  font-size: 12px;
  border-radius: 10px;
  display: inline-block;
  text-align: center;
  position: relative;
  margin-left: 5px;
}
.info-header .level-icon .level-img {
  position: absolute;
  top: -1px;
  left: -6px;
  width: 14px;
  height: 14px;
  border-radius: 7px;
  z-index: 1;
  background: #252525;
  padding-right: 1px;
}
.info-header .info-avatar {
  height: 48px;
  width: 48px;
  border-radius: 999px;
  border: 1.5px solid #3d3d3d;
}
.info-header .info-avatar image {
  height: 48px;
  width: 48px;
  border-radius: 999px;
}
.info-header .person-info {
  padding-left: 12px;
  flex-grow: 1;
}
.desc-icon {
  margin-left: 5px;
  height: 12px;
}
.desc-icon img {
  width: 12px;
  height: 12px;
}
