.mission-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 16px 0 7px;
  background-color: #fff;
}
.mission-item .mission-icon {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.mission-item .mission-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 16px;
}
.mission-item .mission-info .mission-info__title {
  margin-bottom: 4px;
  font-size: 14px;
  font-weight: 700;
  color: #323233;
}
.mission-item .mission-info .mission-info__desc {
  font-size: 12px;
  line-height: 16px;
  color: #7d7e80;
}
.mission-item .mission-action {
  width: 60px;
  background-color: #e7c5a5;
  border-radius: 13px;
  text-align: center;
  line-height: 24px;
  font-size: 12px;
  font-weight: 400;
  color: #463c32;
  padding: 0;
  opacity: 1;
}
.mission-item .mission-action__finished {
  border-color: #c8c9cc;
  background-color: #ebedf0;
  color: #969799;
}
