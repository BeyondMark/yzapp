.deco-words-list {
  position: relative;
  padding: 12px 16px;
}
.deco-words-list__clear {
  position: absolute;
  font-size: 12px;
  color: #c8c9cc;
  text-align: center;
  line-height: 16px;
  right: 16px;
  top: 16px;
  display: flex;
  align-items: center;
}
.deco-words-list__clear .text {
  margin-left: 6px;
}
.deco-words-list__title {
  font-weight: 500;
  font-size: 14px;
  color: #323233;
  line-height: 20px;
  margin-bottom: 8px;
}
.deco-words-list__arrow {
  color: #323233;
  border-radius: 50%;
  border: 1px solid #ebedf0;
  height: 32px;
  width: 32px;
  line-height: 32px;
  text-align: center;
  font-size: 16px;
  background-color: #fff;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.deco-words-list__arrow.is-up {
  transform: rotate(180deg);
}
