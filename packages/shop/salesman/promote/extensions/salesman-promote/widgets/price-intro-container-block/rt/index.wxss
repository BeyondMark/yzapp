.price-intro-wrap {
  position: relative;
  display: block;
  background: #fff;
  margin-top: 8px;
  overflow: hidden;
}
.goods-price-intro {
  position: relative;
  box-sizing: border-box;
  font-size: 12px;
  color: #323233;
  overflow: hidden;
}
.goods-price-intro__title {
  height: 40px;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #323233;
  line-height: 40px;
  margin: 0 16px;
  position: relative;
}
.goods-price-intro__title:before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
  border-top-width: 1px;
  top: 20px;
}
.goods-price-intro .white-block {
  display: inline-block;
  height: 100%;
  background: #fff;
  padding: 0 11px;
  position: absolute;
  z-index: 1;
  transform: translateX(-50%);
}
.goods-price-intro__icon {
  font-size: 16px;
  margin-left: 5px;
  position: relative;
  color: #dcdee0;
  top: 4px;
  transition: transform 0.3s;
}
.goods-price-intro__content {
  background-color: #f7f8fa;
  border-radius: 4px;
  height: 0;
  box-sizing: border-box;
  transition: all 0.3s;
  overflow: hidden;
  margin: 0 16px;
}
.goods-price-intro__content-show {
  height: auto;
  margin: 8px 16px 16px;
}
.goods-price-intro__block {
  margin-bottom: 12px;
  padding: 0 8px;
  line-height: 16px;
  color: #969799;
}
.goods-price-intro__block-top {
  margin-top: 12px;
}
.goods-price-intro__block--small {
  font-size: 12px;
}
.goods-price-intro__text {
  line-height: 20px;
  font-size: 12px;
  color: #323233;
}
