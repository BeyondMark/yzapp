.activity-count-down {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 12px;
  color: #969799;
}
.activity-count-down .flex-column {
  display: flex;
  align-items: center;
}
.activity-count-down__label {
  font-size: 12px;
  line-height: 16px;
}
.activity-count-down__label.activity-end {
  font-size: 18px;
  line-height: 36px;
}
.activity-count-down__time {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  font-size: 12px;
  line-height: 16px;
}
.activity-count-down__process {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 10px;
  color: #fff;
  font-size: 13px;
}
.activity-count-down__time-text {
  white-space: nowrap;
}
.activity-count-down__time-box {
  min-width: 1.1rem;
}
.activity-count-down__seconds-text {
  width: 5px;
}
.activity-count-down .day-text {
  margin-right: 5px;
  font-weight: 400;
}
