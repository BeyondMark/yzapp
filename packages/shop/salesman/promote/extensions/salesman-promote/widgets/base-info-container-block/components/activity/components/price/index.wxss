.activity-price {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-left: 8px;
}
.activity-price__label {
  display: flex;
}
.activity-price__current-label {
  display: inline-block;
  font-size: 13px;
  line-height: 24px;
  font-weight: 400;
  vertical-align: bottom;
}
.activity-price__label-xs {
  margin-left: 2px;
}
.activity-price__label-sm,
.activity-price__label-xs {
  font-size: 13px;
  line-height: 24px;
  vertical-align: bottom;
}
.activity-price__label-sm {
  font-weight: bolder;
}
.activity-price__label-xl {
  font-size: 20px;
  line-height: 24px;
  font-weight: bolder;
  vertical-align: bottom;
}
.activity-price__more {
  margin-left: 6px;
}
.activity-price__more-price {
  font-family: Avenir-Book;
  margin-top: 6px;
  font-size: 12px;
  line-height: 16px;
  opacity: 0.6;
  white-space: nowrap;
  color: #969799;
}
.activity-price__more-price .origin-price {
  text-decoration: line-through;
  vertical-align: bottom;
}
.price-length-1.activity-price__label-xl,
.price-length-2.activity-price__label-xl,
.price-length-3.activity-price__label-xl,
.price-length-4.activity-price__label-xl,
.price-length-5.activity-price__label-xl,
.price-length-6.activity-price__label-xl {
  font-size: 18px;
}
