.goods-promotion__more-title {
  margin: 10px auto;
  font-size: 18px;
  text-align: center;
}
.goods-promotion__popup {
  display: flex;
  line-height: 1.5;
}
.goods-promotion__popup .common-popup__content {
  width: 100%;
}
.goods-promotion__popup .common-popup__content .goods-promotion__detail {
  width: 85%;
}
.goods-promotion__popup
  .common-popup__content
  .goods-promotion__detail
  .van-icon-arrow {
  top: 2px;
  float: right;
  font-size: 16px;
}
.goods-promotion__popup .common-popup__content .common-tag {
  display: block;
}
.goods-promotion__popup .common-popup__content .goods-promotion__tag {
  position: relative;
  margin-top: 2px;
}
.goods-promotion__popup-cnt-title {
  margin: 16px 0 10px 0;
  font-size: 13px;
  line-height: 18px;
  color: #323233;
}
.goods-promotion__popup-cnt-title:first-child {
  margin-top: 0;
}
.goods-promotion__popup-tip {
  font-size: 12px;
  color: #969799;
  text-align: center;
}
.goods-promotion__popup-more {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #969799;
}
.goods-promotion__popup-more-icon {
  margin-left: 6px;
  position: relative;
  top: 2px;
}
.goods-promotion__more-coupon {
  justify-content: center;
  height: 50px;
}
.goods-promotion__more-coupon,
.goods-promotion__more-coupon-content {
  display: flex;
  align-items: center;
}
.goods-promotion__more-coupon-desc {
  font-weight: 500;
  font-size: 14px;
  color: #323233;
}
.goods-promotion__more-coupon-icon {
  margin-top: 2px;
}
