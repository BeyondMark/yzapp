.gallery {
  display: flex;
}
.gallery,
.gallery__img-wrap {
  position: relative;
}
.gallery--multiple {
  flex-wrap: wrap;
  align-content: space-between;
}
.gallery--multiple .gallery__img-wrap {
  margin: 0 2% 2%0;
  width: 32%;
  padding-top: 32%;
}
.gallery--multiple .gallery__img-wrap:nth-child(3n) {
  margin-right: 0;
}
.gallery--multiple .gallery__tian:nth-child(2) {
  margin-right: 10%;
}
.gallery--multiple .gallery__tian:nth-child(3) {
  margin-right: 2%;
}
.gallery--multiple .gallery__img {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
}
