.feed-item {
  display: flex;
}
.feed-item__content {
  width: calc(100% - 52px);
}
.feed-item__content--no-img {
  width: 100%;
}
.feed-item__thumb {
  flex-shrink: 0;
  margin-right: 12px;
  width: 40px;
  height: 40px;
}
.feed-item__title {
  font-size: 14px;
  color: #333;
  font-weight: 700;
  line-height: 20px;
  margin-bottom: 8px;
}
.feed-item__linked-goods {
  margin-top: 12px;
}
.feed-item__text {
  margin-bottom: 8px;
  padding: 12px;
  background: #f7f8fa;
}
.feed-item__video-width {
  width: 200px;
}
.feed-item__video-height {
  height: 200px;
}
