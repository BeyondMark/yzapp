.radius-popup {
  border-radius: 20px 20px 0 0;
}
.address-container {
  height: 80vh;
}
.address-container .title-container {
  position: relative;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
}
.address-container .title-container .close-btn {
  position: absolute;
  right: 5px;
  top: 0;
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.address-container .title-container .close-btn:active {
  opacity: 0.6;
}
.address-container .panel-container {
  height: calc(100% - 40px);
}
