.address-panel-container {
  background: #f2f3f5;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.address-panel-container .address-panel-body {
  box-sizing: border-box;
  padding: 10px;
  flex: 1;
  overflow-y: auto;
}
.address-panel-container .address-panel-body .no-address {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.address-panel-container .address-panel-body .no-address_img {
  width: 100px;
  height: 100px;
  background-image: url(https://b.yzcdn.cn/wsc-minapp/icon/retail/no-address.svg);
  background-repeat: no-repeat;
  background-position: 50%;
}
.address-panel-container .address-panel-body .no-address_title {
  font-size: 14px;
  color: #969799;
}
.address-panel-container .address-panel-bottom {
  height: 50px;
  box-sizing: border-box;
  padding: 5px 10px;
  display: flex;
  background: #fff;
}
.address-panel-container .address-panel-bottom .add-address-btn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background: var(--theme-main-color);
  border-radius: 25px;
  color: #fff;
}
.address-panel-container .address-panel-bottom .add-address-btn:active {
  opacity: 0.6;
}
