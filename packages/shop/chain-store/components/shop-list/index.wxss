.container .shop-list-title {
  display: flex;
  justify-content: space-between;
  height: 30px;
  line-height: 30px;
  padding: 6px 16px;
  padding-top: 16px;
  font-size: 12px;
  color: #969799;
  position: relative;
}
.container .shop-list-title:before {
  content: "";
  width: 100%;
  height: 10px;
  background: #f2f2f2;
  position: absolute;
  top: 0;
  left: 0;
}
.container .shop-list-title .all {
  display: flex;
  align-items: center;
}
.container .shop-list-title .all .title-arrow {
  margin: 1px 16px 0 4px;
  font-size: 15px;
  color: #c8c9cc;
}
.container .shop-list-wrapper:last-child .shop-list-item {
  border-bottom: none;
}
.container .shop-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 16px;
  padding: 10px 0;
  font-size: 14px;
  border-bottom: 1px solid #e5e5e5;
}
.container .shop-list-item .item-content {
  width: 260px;
}
.container .shop-list-item .item-content .item-head {
  display: flex;
  align-items: center;
  font-size: 16px;
  line-height: 20px;
  color: #323233;
}
.container .shop-list-item .item-content .item-head .name {
  font-size: 16px;
  line-height: 20px;
  color: #323233;
  margin-right: 8px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.container .shop-list-item .item-content .item-head .mark {
  min-width: 52px;
  line-height: 16px;
  text-align: center;
  padding: 0;
  color: #ee0a24;
  border-radius: 8px;
  font-size: 10px;
  background-color: #fbe8e8;
}
.container .shop-list-item .item-desc {
  margin-top: 8px;
  font-size: 13px;
  color: #969799;
  line-height: 16px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.container .shop-list-item .item-desc .num:after {
  content: " | ";
  color: #ebedf0;
}
.container .about-blank {
  margin: 40px;
  text-align: center;
  font-size: 14px;
  color: #999;
}
