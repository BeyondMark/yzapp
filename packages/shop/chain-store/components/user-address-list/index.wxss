.current {
  padding: 0 16px;
}
.current-title {
  font-size: 12px;
  line-height: 20px;
  color: #999;
  padding: 6px 0;
}
.current-name {
  font-weight: 500;
  font-size: 16px;
  line-height: 22px;
  color: #323233;
  flex-grow: 1;
}
.current-name,
.current-reset {
  display: flex;
  align-items: center;
}
.current-reset {
  font-size: 14px;
  line-height: 20px;
  color: #333;
  width: 80px;
  justify-content: flex-end;
}
.current-address {
  display: flex;
  align-items: center;
  height: 42px;
}
.ml4px {
  margin-left: 4px;
}
.gap {
  width: 100%;
  height: 10px;
  background: #f2f2f2;
}
.title {
  font-size: 12px;
  line-height: 20px;
  color: #999;
  padding: 6px 16px;
}
.item {
  padding: 12px 16px;
  display: flex;
  align-items: center;
}
.left {
  margin-right: 24px;
  flex-grow: 1;
}
.name {
  font-weight: 500;
  font-size: 16px;
  line-height: 16px;
  color: #323233;
  margin-bottom: 8px;
}
.address,
.info {
  font-size: 12px;
  line-height: 17px;
  color: #666;
}
.address {
  margin-bottom: 8px;
}
