@import "/packages/shop/multi-store/select-poi/base.wxss";
.address-list {
  padding-left: 0;
}
.address-list .h4 {
  padding-left: 15px;
}
.address-list .item:first-child {
  border-top: 0;
}
.address-list .item.flex {
  justify-content: space-between;
}
.address-list .icon-arrow-down {
  font-size: 8px;
  margin-left: 5px;
  transform: rotate(90deg);
  padding-top: 2px;
}
.address-list .icon-arrow-up {
  font-size: 8px;
  margin-left: 5px;
  transform: rotate(-90deg);
  padding-top: 2px;
}
.address-list .address-info {
  flex: 1;
  font-size: 14px;
  padding: 15px 60px 15px 15px;
}
.address-list .address-info__detail {
  line-height: 20px;
  text-align: left;
}
.address-list .address-info__user-info {
  margin-top: 10px;
  font-size: 12px;
  color: #999;
  text-align: left;
  line-height: 17px;
}
.address-list .edit {
  font-size: 20px;
  right: 20px;
  top: 50%;
  position: absolute;
  transform: translateY(-50%);
}
.address-list .extend {
  color: #38f;
  height: 30px;
  line-height: 30px;
  width: 100%;
  text-align: center;
  font-size: 12px;
}
.address-list .extend .extend-arrow {
  transform: rotate(90deg);
  font-size: 12px;
  margin-left: 5px;
}
.address-list .extend .extend-arrow.arrow-down {
  transform: rotate(-90deg);
}
