@import "/packages/shop/multi-store/select-poi/base.wxss";
.near-poi {
  padding-right: 0;
}
.near-poi .address .item.flex {
  justify-content: space-between;
}
.near-poi .address .van-list {
  padding-bottom: 46px;
}
.near-poi .address .info {
  flex: 1;
}
.near-poi .address .info .p:last-child {
  margin-top: 10px;
  font-size: 12px;
  color: #999;
}
.near-poi .address .edit {
  width: 50px;
  text-align: right;
  height: 50px;
  line-height: 50px;
}
.zan-cell {
  position: relative;
  padding: 15px 0;
  display: flex;
  align-items: center;
  line-height: 14px;
  font-size: 14px;
}
.zan-cell:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: solid #e5e5e5;
  border-width: 0 0 1px;
  right: 0;
}
.h4 {
  font-size: 12px;
  color: #999;
}
.p {
  font-size: 14px;
}
