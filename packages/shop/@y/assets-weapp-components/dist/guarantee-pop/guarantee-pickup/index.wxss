@import "/packages/shop/@y/assets-weapp-components/dist/common/index.wxss";
.guarantee-pickup {
  height: 70vh;
}
.guarantee-pickup__container {
  position: relative;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 16px 0;
}
.guarantee-pickup__title {
  color: #39393a;
  font-weight: 700;
  font-size: 16px;
  line-height: 22px;
  text-align: center;
}
.guarantee-pickup__content {
  flex: auto;
  margin-top: 10px;
  padding: 16px 12px;
  overflow-y: auto;
  background-color: #f7f8fa;
}
.guarantee-pickup__green {
  margin-bottom: 16px;
  padding: 16px;
  color: #fff;
  font-size: 12px;
  line-height: 16px;
  text-align: center;
  background-image: url(https://b.yzcdn.cn/public_files/a4b651ac530eca4e611978112b01f30d.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.guarantee-pickup__green image.icon {
  width: 18px;
  height: 18px;
  vertical-align: bottom;
}
.guarantee-pickup__desc {
  margin-bottom: 16px;
  padding: 20px 16px;
  background-color: #fff;
  border-radius: 6px;
}
.guarantee-pickup__desc > view:first-child {
  margin-bottom: 32px;
  font-weight: 700;
  font-size: 16px;
  text-align: center;
}
.guarantee-pickup__desc > view:nth-child(2) {
  margin-bottom: 8px;
  font-size: 14px;
  line-height: 18px;
}
.guarantee-pickup__desc > view:nth-child(3) {
  color: #969799;
  font-size: 12px;
  line-height: 16px;
}
.guarantee-pickup__support {
  padding: 20px;
  background-color: #fff;
  border-radius: 6px;
}
.guarantee-pickup__support > view:first-child {
  margin-bottom: 32px;
  font-weight: 700;
  font-size: 16px;
  text-align: center;
}
.guarantee-pickup__support > view:nth-child(2) {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  text-align: center;
}
.guarantee-pickup__support > view:nth-child(2) > view {
  flex: 1;
}
.guarantee-pickup__support > view:nth-child(2) > view:not(:last-child) {
  margin-right: 30px;
}
.guarantee-pickup__support > view:nth-child(2) .name {
  margin-top: 10px;
  margin-bottom: 4px;
  font-weight: 700;
  font-size: 14px;
}
.guarantee-pickup__support > view:nth-child(2) .desc {
  color: #969799;
  font-size: 12px;
  line-height: 16px;
}
.guarantee-pickup__support > view:nth-child(2) image {
  width: 32px;
  height: 32px;
}
